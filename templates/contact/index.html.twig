{% extends 'base.html.twig' %}

{% block title %}Contact CORK{% endblock %}

{% block body %}
<section class="contact-page max-w-6xl mx-auto px-4 py-8 text-gray-700 bg-[#f7f1e9]">
    <div class="contact-header text-center mb-12">
        <h1 class="text-3xl md:text-4xl font-bold text-red-900 mb-2">Contact CORK</h1>
        <p class="text-lg text-gray-600 max-w-xl mx-auto leading-relaxed">We're here to assist you with any questions about our fine wines or your shopping experience. Reach out to us!</p>
    </div>

    <div class="contact-content flex flex-wrap justify-center gap-8">
        <div class="contact-form flex-1 min-w-[300px] max-w-xl bg-white/10 backdrop-blur-md border border-white/20 p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl text-gray-900 mb-4">Get in Touch</h2>
            <form action="{{ path('app_contact') }}" method="post">
                <label for="name" class="block text-base text-gray-700 font-medium mb-2">Name</label>
                <input type="text" id="name" name="name" required class="w-full p-3 mb-4 border border-gray-300 rounded-md text-base text-gray-700 bg-white/50 backdrop-blur-sm focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-200">

                <label for="email" class="block text-base text-gray-700 font-medium mb-2">Email</label>
                <input type="email" id="email" name="email" required class="w-full p-3 mb-4 border border-gray-300 rounded-md text-base text-gray-700 bg-white/50 backdrop-blur-sm focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-200">

                <label for="message" class="block text-base text-gray-700 font-medium mb-2">Message</label>
                <textarea id="message" name="message" required class="w-full p-3 mb-4 border border-gray-300 rounded-md text-base text-gray-700 bg-white/50 backdrop-blur-sm h-36 resize-y focus:outline-none focus:border-amber-500 focus:ring-2 focus:ring-amber-200"></textarea>

                <button type="submit" 
                    class="inline-block font-semibold py-3 px-6 rounded-lg transition-all duration-300 bg-[#7F1734] text-[#F8EAD8] hover:bg-[#9E2B47]">
                    Send Message
                </button>

            </form>
        </div>

        <div class="contact-info flex-1 min-w-[300px] max-w-md p-6 bg-white/10 backdrop-blur-md border border-white/20 rounded-lg shadow-lg">
            <div class="contact-image w-full h-48 bg-cover bg-center rounded-lg shadow-md mb-6">
                <img src="{{ asset('images/contact_winery.jpg') }}" alt="Winery" class="w-full h-full object-cover rounded-lg mb-2">
                <img src="{{ asset('assets/images/cork_logo.png') }}" alt="CORK Logo" class="w-full h-full object-contain rounded-lg hover:scale-110 transition-transform duration-300">
            </div>
            <h2 class="text-2xl text-gray-900 mb-4">Contact Information</h2>
            <p class="text-base text-gray-600 leading-relaxed mb-4"><strong>Email:</strong> <a href="mailto:support@corkwines.com" class="text-amber-500 hover:underline">support@corkwines.com</a></p>
            <p class="text-base text-gray-600 leading-relaxed mb-4"><strong>Phone:</strong> +1 (800) 946-3978</p>
            <p class="text-base text-gray-600 leading-relaxed mb-4"><strong>Address:</strong> 123 Vineyard Lane, Napa Valley, CA 94558, USA</p>
            <p class="text-base text-gray-600 leading-relaxed"><strong>Hours:</strong> Monday - Friday, 9 AM - 5 PM PST</p>
        </div>
    </div>
</section>

<style>
    .backdrop-blur-md {
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
    }

    .backdrop-blur-sm {
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
    }

    @media (max-width: 768px) {
        .contact-header h1 {
            font-size: 2rem;
        }

        .contact-content {
            flex-direction: column;
            align-items: center;
        }

        .contact-form,
        .contact-info {
            width: 100%;
            max-width: 100%;
        }
    }
</style>
{% endblock %}