{% extends 'base.html.twig' %}

{% block title %}Add New Category | CORK Admin{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-amber-50 via-rose-50 to-amber-100 py-20 px-6">
    <div class="max-w-2xl mx-auto bg-white/80 backdrop-blur-lg p-10 rounded-3xl shadow-2xl border border-amber-100 relative overflow-hidden">

        <!-- Decorative top accent -->
        <div class="absolute top-0 left-0 right-0 h-2 bg-gradient-to-r from-[#7F1734] via-[#9E2B47] to-[#EFCFB4] rounded-t-3xl"></div>

        <h1 class="text-4xl font-extrabold text-center text-[#7F1734] tracking-tight mb-12">
            üç∑ Add New Category
        </h1>

        {{ form_start(form, {'attr': {'class': 'space-y-10'}}) }}

            <!-- Category Name -->
            <div class="relative group">
                {{ form_label(form.name, 'Category Name', {'label_attr': {'class': 'block text-sm font-semibold text-yellow-900 mb-2 tracking-wide'}}) }}
                {{ form_widget(form.name, {
                    'attr': {
                        'class': 'w-full px-5 py-4 rounded-2xl bg-white/70 border border-amber-200 shadow-md focus:ring-4 focus:ring-[#7F1734]/40 focus:border-[#7F1734] text-gray-800 placeholder-gray-500 backdrop-blur-sm transition-all duration-300 group-hover:shadow-lg relative z-10'
                    }
                }) }}
                {% if form_errors(form.name) %}
                    <p class="text-sm text-red-600 mt-1">{{ form_errors(form.name) }}</p>
                {% endif %}

                <!-- Floating glow (now non-blocking) -->
                <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-white/40 to-transparent opacity-0 group-hover:opacity-100 blur-md transition-all duration-500 pointer-events-none"></div>
            </div>

            <!-- Description -->
            <div class="relative group">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-semibold text-yellow-900 mb-2 tracking-wide'}}) }}
                {{ form_widget(form.description, {
                    'attr': {
                        'rows': 4,
                        'class': 'w-full px-5 py-4 rounded-2xl bg-white/70 border border-amber-200 shadow-md focus:ring-4 focus:ring-[#7F1734]/40 focus:border-[#7F1734] text-gray-800 placeholder-gray-500 resize-none backdrop-blur-sm transition-all duration-300 group-hover:shadow-lg relative z-10'
                    }
                }) }}
                {% if form_errors(form.description) %}
                    <p class="text-sm text-red-600 mt-1">{{ form_errors(form.description) }}</p>
                {% endif %}

                <!-- Floating glow (now non-blocking) -->
                <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-white/40 to-transparent opacity-0 group-hover:opacity-100 blur-md transition-all duration-500 pointer-events-none"></div>
            </div>

            <!-- Buttons -->
            <div class="flex justify-center gap-6 mt-12">
                <button type="submit"
                        class="px-8 py-3.5 rounded-xl shadow-md font-semibold text-lg border transition-all duration-300 transform hover:scale-105"
                        style="background-color: #7F1734; color: #F8EAD8; border-color: #EFCFB4;"
                        onmouseover="this.style.backgroundColor='#9E2B47'"
                        onmouseout="this.style.backgroundColor='#7F1734'">
                    Save Category
                </button>

                <a href="{{ path('app_category_index') }}"
                   class="px-8 py-3.5 rounded-xl shadow-md font-semibold text-lg border border-amber-200 text-[#7F1734] bg-amber-50 hover:bg-amber-100 transition-all duration-300 transform hover:scale-105">
                    Cancel
                </a>
            </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
