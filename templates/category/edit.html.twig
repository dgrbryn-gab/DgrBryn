{% extends 'base.html.twig' %}

{% block title %}Edit Category | Wine Store{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="py-8 px-4 max-w-2xl mx-auto">
    <h1 class="text-2xl font-semibold text-gray-800 mb-6">Edit Category</h1>

    <div class="bg-white p-6 rounded-lg border border-gray-200">
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                {{ form_label(form.name, 'Category Name', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
                {{ form_widget(form.name, {'attr': {
                    'class': 'w-full border border-gray-300 rounded-md px-3 py-2 text-gray-800 bg-white'
                }}) }}
                {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>
            <div>
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-semibold text-gray-700 mb-1'}}) }}
                {{ form_widget(form.description, {'attr': {
                    'class': 'w-full border border-gray-300 rounded-md px-3 py-2 text-gray-800 bg-white'
                }}) }}
                {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>
            {{ form_widget(form._token) }}
            <div class="flex justify-end gap-3 mt-6">
                <button type="submit" 
                        class="px-4 py-2 font-semibold rounded-md text-white"
                        style="background-color: #7F1734; border: 1px solid #F8EAD8;"
                        onmouseover="this.style.backgroundColor='#9E2B47';"
                        onmouseout="this.style.backgroundColor='#7F1734';">
                    Save
                </button>
                <a href="{{ path('app_category_index') }}" 
                   class="px-4 py-2 font-semibold rounded-md text-gray-800 border border-gray-300"
                   style="background-color: #EFCFB4;"
                   onmouseover="this.style.backgroundColor='#E3B78E';"
                   onmouseout="this.style.backgroundColor='#EFCFB4';">
                    Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}