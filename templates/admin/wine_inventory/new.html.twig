{% extends 'admin/admin_base.html.twig' %}

{% block title %}Add New Wine Inventory | CORK Admin{% endblock %}

{% block admin_content %}
<div class="min-h-screen bg-[#4B164C] py-2 px-0">
    <div class="min-h-screen bg-[#4B164C]">
        <div class="fixed top-0 left-64 right-0 bottom-0 z-50 flex items-center justify-center modal-overlay">
            <div class="w-full max-w-4xl mx-auto px-6 sm:px-8 lg:px-12 bg-white/95 backdrop-blur-lg py-10 rounded-3xl shadow-2xl border border-[#EFCFB4] relative overflow-hidden">

                <!-- Top Accent Line -->
                <div class="absolute top-0 left-0 right-0 h-2 bg-gradient-to-r from-[#EFCFB4] via-[#9E2B47] to-[#7F1734] rounded-t-3xl"></div>

                <!-- Header -->
                <h1 class="text-4xl font-extrabold text-center text-[#7F1734] tracking-tight mb-4">
                    Add New Wine Inventory
                </h1>
                <p class="text-center text-gray-600 text-sm mb-8 max-w-2xl mx-auto">
                    Record a new wine stock entry â€” manage quantities and acquisition details.
                </p>

                {{ form_start(form, {
                    'attr': {'class': 'space-y-8'}
                }) }}

                <!-- Product -->
                <div>
                    {{ form_label(form.product, 'Select Product', {
                        'label_attr': {'class': 'block text-sm font-semibold text-[#4B164C] mb-2 tracking-wide'}
                    }) }}
                    {{ form_widget(form.product, {
                        'attr': {
                            'class': 'w-full px-5 py-4 rounded-2xl bg-white border border-amber-200 shadow focus:ring-4 focus:ring-[#9E2B47]/40 focus:border-[#7F1734] text-gray-800 transition-all duration-300'
                        }
                    }) }}
                    {% if form_errors(form.product) %}
                        <p class="text-sm text-red-600 mt-1">{{ form_errors(form.product) }}</p>
                    {% endif %}
                </div>

                <!-- Quantity -->
                <div>
                    {{ form_label(form.quantity, 'Quantity', {
                        'label_attr': {'class': 'block text-sm font-semibold text-[#4B164C] mb-2 tracking-wide'}
                    }) }}
                    {{ form_widget(form.quantity, {
                        'attr': {
                            'class': 'w-full px-5 py-4 rounded-2xl bg-white border border-amber-200 shadow focus:ring-4 focus:ring-[#9E2B47]/40 focus:border-[#7F1734] text-gray-800 placeholder-gray-400 transition-all duration-300',
                            'placeholder': 'e.g., 12'
                        }
                    }) }}
                    {% if form_errors(form.quantity) %}
                        <p class="text-sm text-red-600 mt-1">{{ form_errors(form.quantity) }}</p>
                    {% endif %}
                </div>

                <!-- Acquisition Date -->
                <div>
                    {{ form_label(form.acquiredDate, 'Acquisition Date', {
                        'label_attr': {'class': 'block text-sm font-semibold text-[#4B164C] mb-2 tracking-wide'}
                    }) }}
                    {{ form_widget(form.acquiredDate, {
                        'attr': {
                            'class': 'w-full px-5 py-4 rounded-2xl bg-white border border-amber-200 shadow focus:ring-4 focus:ring-[#9E2B47]/40 focus:border-[#7F1734] text-gray-800 transition-all duration-300'
                        }
                    }) }}
                    {% if form_errors(form.acquiredDate) %}
                        <p class="text-sm text-red-600 mt-1">{{ form_errors(form.acquiredDate) }}</p>
                    {% endif %}
                </div>

                <!-- CSRF Token -->
                {{ form_widget(form._token) }}

                <!-- Buttons -->
                <div class="flex justify-center gap-6 mt-10">
                    <button type="submit"
                            class="px-8 py-3.5 rounded-xl shadow-md font-semibold text-lg border transition-all duration-300 transform hover:scale-105 bg-[#7F1734] text-[#F8EAD8] border-[#EFCFB4] hover:bg-[#9E2B47]">
                        Save Inventory
                    </button>

                    <a href="{{ path('app_wine_inventory_index') }}"
                       class="px-8 py-3.5 rounded-xl shadow-md font-semibold text-lg border border-[#EFCFB4] text-[#7F1734] bg-[#F8EAD8] hover:bg-[#F3D8C0] transition-all duration-300 transform hover:scale-105">
                        Cancel
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}