{% extends 'admin/admin_base.html.twig' %}

{% block title %}User Management - CORK Admin{% endblock %}

{% block admin_content %}

<div class="min-h-screen bg-gradient-to-b from-[#FFF8F0] to-[#F8EAD8] py-14 px-6">
    <div class="max-w-7xl mx-auto">
        
        <!-- Header Section -->
        <div class="flex flex-col sm:flex-row justify-between items-center mb-10">
            <div class="text-center sm:text-left mb-4 sm:mb-0">
                <h1 class="text-4xl font-extrabold text-[#5E0B15] tracking-tight mb-2">ğŸ‘¥ User Management</h1>
                <p class="text-gray-600 text-sm italic">Create and manage admin, staff, and customer accounts.</p>
            </div>
            <a href="{{ path('admin_users_new') }}"
                class="px-6 py-2 rounded-xl font-semibold shadow-md transition-all duration-300 border text-sm sm:text-base bg-[#EFCFB4] text-[#7F1734] border-[#EFCFB4] hover:bg-[#7F1734] hover:text-white">
                + Add New User
            </a>
        </div>

        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
            <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg" role="alert">
                âœ“ {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg" role="alert">
                âœ— {{ message }}
            </div>
        {% endfor %}

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
            <!-- Total Users -->
            <div class="bg-white/90 backdrop-blur-sm rounded-xl border border-[#EFCFB4]/50 p-6 shadow-sm">
                <p class="text-gray-500 text-xs uppercase font-semibold tracking-wide">Total Users</p>
                <h3 class="text-3xl font-bold text-[#5E0B15] mt-2">{{ stats.total }}</h3>
            </div>

            <!-- Admins -->
            <div class="bg-white/90 backdrop-blur-sm rounded-xl border border-red-300 p-6 shadow-sm">
                <p class="text-gray-500 text-xs uppercase font-semibold tracking-wide">Administrators</p>
                <h3 class="text-3xl font-bold text-red-700 mt-2">{{ stats.admins }}</h3>
            </div>

            <!-- Staff -->
            <div class="bg-white/90 backdrop-blur-sm rounded-xl border border-yellow-300 p-6 shadow-sm">
                <p class="text-gray-500 text-xs uppercase font-semibold tracking-wide">Staff Members</p>
                <h3 class="text-3xl font-bold text-yellow-700 mt-2">{{ stats.staff }}</h3>
            </div>
        </div>

        <!-- Users Table -->
        {% if users|length > 0 %}
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200">
                <div class="overflow-x-auto">
                    <table class="w-full table-fixed">
                        <thead>
                            <tr class="bg-gray-100 border-b-2 border-[#5E0B15]">
                                <th class="px-4 py-4 text-left text-xs sm:text-sm font-bold text-[#5E0B15]">ID</th>
                                <th class="px-4 py-4 text-left text-xs sm:text-sm font-bold text-[#5E0B15]">Username</th>
                                <th class="px-4 py-4 text-left text-xs sm:text-sm font-bold text-[#5E0B15]">Email</th>
                                <th class="px-4 py-4 text-left text-xs sm:text-sm font-bold text-[#5E0B15]">Role</th>
                                <th class="px-4 py-4 text-left text-xs sm:text-sm font-bold text-[#5E0B15]">Status</th>
                                <th class="px-4 py-4 text-left text-xs sm:text-sm font-bold text-[#5E0B15]">Created</th>
                                <th class="px-4 py-4 text-center text-xs sm:text-sm font-bold text-[#5E0B15]">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            {% for user in users %}
                                <tr class="hover:bg-gray-50 transition-colors duration-150">
                                    <td class="px-4 py-4 text-xs sm:text-sm text-gray-800 font-mono font-semibold">#{{ user.id }}</td>
                                    <td class="px-4 py-4 text-xs sm:text-sm text-gray-700 break-all font-mono">@{{ user.username }}</td>
                                    <td class="px-4 py-4 text-xs sm:text-sm text-gray-700 break-all">{{ user.email }}</td>
                                    <td class="px-4 py-4 text-xs sm:text-sm">
                                        {% set role = user.roles[0] %}
                                        {% if role == 'ROLE_ADMIN' %}
                                            <span class="inline-flex items-center px-2 sm:px-3 py-1 sm:py-1.5 bg-red-100 text-red-800 rounded-full text-xs font-bold">ğŸ” Admin</span>
                                        {% elseif role == 'ROLE_STAFF' %}
                                            <span class="inline-flex items-center px-2 sm:px-3 py-1 sm:py-1.5 bg-amber-100 text-amber-800 rounded-full text-xs font-bold">ğŸ‘¨â€ğŸ’¼ Staff</span>
                                        {% else %}
                                            <span class="inline-flex items-center px-2 sm:px-3 py-1 sm:py-1.5 bg-gray-100 text-gray-800 rounded-full text-xs font-bold">{{ role }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-4 py-4 text-xs sm:text-sm">
                                        {% if user.isActive %}
                                            <span class="inline-flex items-center px-2 sm:px-3 py-1 sm:py-1.5 bg-green-100 text-green-800 rounded-full text-xs font-bold">âœ“ Active</span>
                                        {% else %}
                                            <span class="inline-flex items-center px-2 sm:px-3 py-1 sm:py-1.5 bg-red-100 text-red-800 rounded-full text-xs font-bold">âœ— Inactive</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-4 py-4 text-xs sm:text-sm text-gray-700 font-medium">
                                        {{ user.createdAt ? user.createdAt|date('M d, Y') : 'N/A' }}
                                    </td>
                                    <td class="px-2 sm:px-4 py-4 text-xs sm:text-sm">
                                        <div class="flex justify-center gap-1 sm:gap-2 flex-nowrap">
                                            <!-- Edit Button -->
                                            <a href="{{ path('admin_users_edit', {'id': user.id}) }}"
                                                class="inline-flex items-center justify-center px-2 py-1 rounded-lg font-semibold text-xs transition-all duration-300 bg-[#EFCFB4] text-[#7F1734] border border-[#EFCFB4] hover:bg-[#E3B78E] whitespace-nowrap w-12"
                                                title="Edit user">
                                                âœï¸
                                            </a>

                                            <!-- Toggle Status Form -->
                                            <form method="post" action="{{ path('admin_users_toggle_status', {'id': user.id}) }}" class="inline-flex">
                                                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                                                <button type="submit"
                                                    class="inline-flex items-center justify-center px-2 py-1 rounded-lg font-semibold text-xs transition-all duration-300 shadow-sm hover:shadow-md whitespace-nowrap w-12 {% if user.isActive %}bg-orange-100 text-orange-700 border border-orange-300 hover:bg-orange-200{% else %}bg-green-100 text-green-700 border border-green-300 hover:bg-green-200{% endif %}"
                                                    title="{% if user.isActive %}Deactivate{% else %}Activate{% endif %} user">
                                                    {% if user.isActive %}ğŸ”’{% else %}ğŸ”“{% endif %}
                                                </button>
                                            </form>

                                            <!-- Delete Button -->
                                            <form method="post" action="{{ path('admin_users_delete', {'id': user.id}) }}" class="inline-flex" onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit"
                                                    class="inline-flex items-center justify-center px-2 py-1 rounded-lg font-semibold text-xs transition-all duration-300 bg-[#B6465F] text-[#F8EAD8] border border-[#EFCFB4] hover:bg-[#9E2B47] whitespace-nowrap w-12"
                                                    title="Delete user">
                                                    ğŸ—‘
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% else %}
            <div class="text-center py-24 bg-white/90 rounded-2xl border border-[#EFCFB4]/50 shadow-sm">
                <p class="text-gray-600 text-lg">ğŸ‘¤ No users found.</p>
                <p class="text-gray-500 text-sm mt-2">Create a new user to get started.</p>
            </div>
        {% endif %}

    </div>
</div>

{% endblock %}
