{# templates/admin/admin_base.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Admin - {% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Sidebar link styling */
        .sidebar-link {
            color: #F8EAD8;
            transition: all 0.3s ease;
            border: 1px solid transparent;
        }

        .sidebar-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #FFF6E8; /* lighter milky tone */
            border-color: #EFCFB4;
        }

        /* Active (current page) link */
        .active-sidebar {
            background-color: rgba(255, 255, 255, 0.15);
            border-left: 4px solid #EFCFB4;
            font-weight: bold;
        }

        /* Hide base header/navigation globally */
        header, nav.navbar, .site-header {
            display: none !important;
        }

        /* Also hide base footer */
        footer, .site-footer {
            display: none !important;
        }

        /* Sidebar gradient and styles */
        .wine-gradient {
            background: linear-gradient(180deg, #5E0B15 0%, #7B1E3A 100%);
        }

        .hover-wine:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .wine-shadow {
            box-shadow: 0 4px 6px rgba(123, 30, 58, 0.2);
        }

        /* Milky background and readable text */
        body, main {
            background-color: #FFF8F0 !important; /* Milky soft beige */
            color: #3B0A0A; /* Deep wine text for contrast */
        }

        h1, h2, h3, h4, h5, h6, label {
            color: #5E0B15; /* Wine-colored headings */
        }

        a {
            color: #7B1E3A;
        }

        a:hover {
            color: #9E2B47;
        }

        /* Optional: soften card backgrounds */
        .card, .bg-white {
            background-color: #FFFAF5 !important;
        }
        /* custom site colors (safe without Tailwind JIT) */
        .bg-burgundy { background-color: #7F1734 !important; }
        .text-milky { color: #F8EAD8 !important; }
        .border-efcfb4 { border-color: #EFCFB4 !important; }

        /* hover helper */
        .hover-burgundy:hover { background-color: #7F1734 !important; color: #F8EAD8 !important; }

        /* active/selected look */
        .active-burgundy { background-color: #7F1734 !important; color: #F8EAD8 !important; border-color: #EFCFB4 !important; }

    </style>
        <style>
            /* Helper badges for admin overview cards (avoid inline styles) */
            .badge-burgundy {
                background-color: rgba(94,11,21,0.08);
            }

            .badge-red {
                background-color: rgba(220,38,38,0.08);
            }
        
            /* Card and button hover helpers (no inline CSS) */
            .card-hover {
                transition: background-color 200ms ease, color 200ms ease, box-shadow 200ms ease;
            }

            /* Scoped to admin area and stronger specificity to ensure Tailwind doesn't override it */
            .admin-main .card-hover:hover {
                background-color: #7F1734 !important; /* burgundy */
                color: #F8EAD8 !important; /* milky text */
                box-shadow: 0 10px 15px rgba(0,0,0,0.08) !important;
            }

            /* Ensure text inside the card becomes readable when card background changes */
            .admin-main .card-hover:hover p,
            .admin-main .card-hover:hover h1,
            .admin-main .card-hover:hover h2,
            .admin-main .card-hover:hover h3,
            .admin-main .card-hover:hover h4,
            .admin-main .card-hover:hover .card-label,
            .admin-main .card-hover:hover .card-count {
                color: #F8EAD8 !important;
            }

            .icon-badge {
                transition: background-color 200ms ease, color 200ms ease;
            }

            .admin-main .card-hover:hover .icon-badge {
                background-color: rgba(248,234,216,0.06) !important; /* subtle milky tint for contrast */
            }

            .btn-hover {
                transition: background-color 200ms ease, color 200ms ease, border-color 200ms ease;
            }

            .admin-main .btn-hover:hover,
            .admin-main button.btn-hover:hover,
            .admin-main a.btn-hover:hover {
                background-color: #7F1734 !important; /* burgundy on hover to match design */
                color: #F8EAD8 !important;
                border-color: #EFCFB4 !important;
            }

            /* Apply burgundy hover to the common interactive controls across admin pages */
            .admin-main button:hover,
            .admin-main input[type="submit"]:hover,
            .admin-main input[type="button"]:hover,
            .admin-main .btn:hover,
            .admin-main a.btn:hover,
            .admin-main .form-actions button:hover,
            .admin-main a[role="button"]:hover {
                background-color: #7F1734 !important;
                color: #F8EAD8 !important;
                border-color: #EFCFB4 !important;
            }

            /* Keep accessible focus styles (visible keyboard focus) */
            .admin-main button:focus-visible,
            .admin-main a:focus-visible,
            .admin-main input[type="submit"]:focus-visible {
                outline: 3px solid rgba(239,207,180,0.6);
                outline-offset: 2px;
            }

            /* Ensure buttons placed on burgundy backgrounds remain readable and have clear hover states */
            .admin-main .bg-burgundy .btn-hover,
            .admin-main .bg-burgundy a.btn-hover,
            .admin-main .bg-burgundy button.btn-hover {
                background-color: #EFCFB4 !important; /* milky button background */
                color: #7F1734 !important; /* burgundy text */
                border-color: #EFCFB4 !important;
            }

            .admin-main .bg-burgundy .btn-hover:hover,
            .admin-main .bg-burgundy a.btn-hover:hover,
            .admin-main .bg-burgundy button.btn-hover:hover {
                background-color: #7F1734 !important; /* burgundy on hover */
                color: #F8EAD8 !important; /* milky text on hover */
                border-color: #EFCFB4 !important;
            }
        </style>
{% endblock %}

{% block body %}
