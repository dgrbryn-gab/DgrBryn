{# templates/admin/admin_base.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Admin - {% endblock %}

{% block stylesheets %}
    {# Prevent Browser Cache (required to stop Back button after logout) #}
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">

    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/dashboard-design.css') }}?v={{ random() }}">

    <style>
        /* Burgundy and Beige Color Scheme */
        :root {
            --burgundy-dark: #5E0B15;
            --burgundy-main: #7F1734;
            --burgundy-light: #9E2B47;
            --beige-light: #FFFAF5;
            --beige-main: #F8EAD8;
            --beige-accent: #EFCFB4;
        }

        /* Sidebar link styling */
        .sidebar-link {
            color: var(--beige-main);
            transition: all 0.3s ease;
            border: 1px solid transparent;
        }

        .sidebar-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #FFF6E8;
            border-color: var(--beige-accent);
        }

        .active-sidebar {
            background-color: rgba(255, 255, 255, 0.15);
            border-left: 4px solid var(--beige-accent);
            font-weight: bold;
        }

        header, nav.navbar, .site-header, footer, .site-footer {
            display: none !important;
        }

        .wine-gradient {
            background: linear-gradient(180deg, var(--burgundy-dark) 0%, var(--burgundy-light) 100%);
        }

        .hover-wine:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .wine-shadow {
            box-shadow: 0 4px 6px rgba(127, 23, 52, 0.2);
        }

        /* Admin Card Styling */
        .admin-card {
            background: white;
            border-left: 4px solid var(--burgundy-main);
            transition: all 0.3s ease;
        }

        .admin-card:hover {
            box-shadow: 0 6px 15px rgba(127, 23, 52, 0.15);
            transform: translateY(-2px);
        }

        /* Admin Button Styling */
        .admin-btn-burgundy {
            background: linear-gradient(135deg, var(--burgundy-main) 0%, var(--burgundy-dark) 100%);
            color: var(--beige-main);
            transition: all 0.3s ease;
        }

        .admin-btn-burgundy:hover {
            box-shadow: 0 6px 20px rgba(127, 23, 52, 0.3);
            transform: translateY(-2px);
        }

        body, main {
            background-color: #FFF8F0 !important;
            color: #3B0A0A;
        }

        h1, h2, h3, h4, h5, h6, label {
            color: #5E0B15;
        }

        a { color: #7B1E3A; }
        a:hover { color: #9E2B47; }

        .card, .bg-white {
            background-color: #FFFAF5 !important;
        }

        .bg-burgundy { background-color: #7F1734 !important; }
        .text-milky { color: #F8EAD8 !important; }
        .border-efcfb4 { border-color: #EFCFB4 !important; }
        .hover-burgundy:hover { background-color: #7F1734 !important; color: #F8EAD8 !important; }
        .active-burgundy { background-color: #7F1734 !important; color: #F8EAD8 !important; border-color: #EFCFB4 !important; }

        .badge-burgundy { background-color: rgba(94,11,21,0.08); }
        .badge-red { background-color: rgba(220,38,38,0.08); }

        .card-hover { transition: background-color 200ms ease, color 200ms ease, box-shadow 200ms ease; }
        .admin-main .card-hover:hover {
            background-color: #7F1734 !important; color: #F8EAD8 !important;
            box-shadow: 0 10px 15px rgba(0,0,0,0.08) !important;
        }
        .admin-main .card-hover:hover p,
        .admin-main .card-hover:hover h1, .admin-main .card-hover:hover h2,
        .admin-main .card-hover:hover h3, .admin-main .card-hover:hover h4,
        .admin-main .card-hover:hover .card-label,
        .admin-main .card-hover:hover .card-count {
            color: #F8EAD8 !important;
        }

        .icon-badge { transition: background-color 200ms ease, color 200ms ease; }
        .admin-main .card-hover:hover .icon-badge {
            background-color: rgba(248,234,216,0.06) !important;
        }

        .btn-hover { transition: background-color 200ms ease, color 200ms ease, border-color 200ms ease; }
        .admin-main .btn-hover:hover,
        .admin-main button.btn-hover:hover,
        .admin-main a.btn-hover:hover {
            background-color: #7F1734 !important; 
            color: #F8EAD8 !important; 
            border-color: #7F1734 !important;
        }

        .card-nav-hover { transition: background-color 200ms ease, color 200ms ease, border-color 200ms ease, box-shadow 200ms ease; }
        .admin-main .card-nav-hover:hover {
            background-color: #7F1734 !important;
            border-color: #7F1734 !important;
            box-shadow: 0 10px 15px rgba(0,0,0,0.1) !important;
        }
        .admin-main .card-nav-hover:hover h3,
        .admin-main .card-nav-hover:hover i {
            color: #F8EAD8 !important;
        }
        .admin-main .card-nav-hover:hover p {
            color: #EFCFB4 !important;
        }

        .admin-main button:hover,
        .admin-main input[type="submit"]:hover,
        .admin-main input[type="button"]:hover,
        .admin-main .btn:hover,
        .admin-main a.btn:hover,
        .admin-main .form-actions button:hover,
        .admin-main a[role="button"]:hover {
            background-color: #7F1734 !important; color: #F8EAD8 !important; border-color: #EFCFB4 !important;
        }

        .admin-main button:focus-visible,
        .admin-main a:focus-visible,
        .admin-main input[type="submit"]:focus-visible {
            outline: 3px solid rgba(239,207,180,0.6); outline-offset: 2px;
        }

        .admin-main .bg-burgundy .btn-hover,
        .admin-main .bg-burgundy a.btn-hover,
        .admin-main .bg-burgundy button.btn-hover {
            background-color: #EFCFB4 !important; color: #7F1734 !important; border-color: #EFCFB4 !important;
        }
        .admin-main .bg-burgundy .btn-hover:hover,
        .admin-main .bg-burgundy a.btn-hover:hover,
        .admin-main .bg-burgundy button.btn-hover:hover {
            background-color: #7F1734 !important; color: #F8EAD8 !important; border-color: #EFCFB4 !important;
        }

        /* Sidebar header text styling */
        aside .subtitle {
            color: #FFFAF5 !important;
            font-weight: 600 !important;
            opacity: 1 !important;
        }

        aside .sidebar-title {
            color: #FFFAF5 !important;
            font-weight: 900 !important;
            opacity: 1 !important;
            font-size: 1.5rem !important;
        }
    </style>
{% endblock %}

{% block body %}
<div class="min-h-screen flex text-gray-900">

    <!-- Sidebar -->
    <aside class="w-64 text-[#F8EAD8] fixed top-0 left-0 h-screen border-r border-[#6F0F26] flex flex-col z-50" style="background: linear-gradient(135deg, #7F1734 0%, #4B164C 100%);">
        <div class="px-6 py-8 border-b border-white/20 text-center">
            <div class="flex items-center justify-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-[#EFCFB4]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 8c1.657 0 3-1.343 3-3S13.657 2 12 2 9 3.343 9 5s1.343 3 3 3zM5 22l7-7 7 7" />
                </svg>
                <h1 class="sidebar-title">
                    Wine Admin
                </h1>
            </div>
            <p class="subtitle text-sm mt-2">
                Fine Cellar Management
            </p>
        </div>

        <nav class="mt-6 px-2 space-y-2 flex-1">

            <a href="{{ path('admin_dashboard') }}"
               class="flex items-center space-x-3 px-4 py-3 rounded-md font-semibold sidebar-link {{ app.request.get('_route') == 'admin_dashboard' ? 'active-sidebar' : '' }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 16l7-4M9 9l7-4" />
                </svg>
                <span>Dashboard</span>
            </a>

            <a href="{{ path('app_category_index') }}"
               class="flex items-center space-x-3 px-4 py-3 rounded-md font-semibold sidebar-link {{ app.request.get('_route') starts with 'app_category' ? 'active-sidebar' : '' }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                </svg>
                <span>Categories</span>
            </a>

            <a href="{{ path('app_store_product_index') }}"
               class="flex items-center space-x-3 px-4 py-3 rounded-md font-semibold sidebar-link {{ app.request.get('_route') starts with 'app_store_product' ? 'active-sidebar' : '' }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                <span>Products</span>
            </a>

            <a href="{{ path('app_wine_inventory_index') }}"
               class="flex items-center space-x-3 px-4 py-3 rounded-md font-semibold sidebar-link {{ app.request.get('_route') starts with 'app_wine_inventory' ? 'active-sidebar' : '' }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m0 0l8 4m-8-4v10l8 4m0-10l8 4m0 0v10l-8 4" />
                </svg>
                <span>Inventory</span>
            </a>

            <a href="{{ path('app_order_index') }}"
               class="flex items-center space-x-3 px-4 py-3 rounded-md font-semibold sidebar-link {{ app.request.get('_route') starts with 'app_order' ? 'active-sidebar' : '' }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
                <span>Orders</span>
            </a>

            <a href="{{ path('admin_users_index') }}"
               class="flex items-center space-x-3 px-4 py-3 rounded-md font-semibold sidebar-link {{ app.request.get('_route') starts with 'admin_users' ? 'active-sidebar' : '' }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 8.048M7 14H5a2 2 0 00-2 2v3h14v-3a2 2 0 00-2-2h-2M9 7a4 4 0 118 0" />
                </svg>
                <span>Users</span>
            </a>

        </nav>

        {# Logout Button at Bottom #}
        <div class="border-t border-white/20 px-2 py-4">
            <a href="{{ path('app_logout') }}"
               class="flex items-center space-x-3 px-4 py-3 rounded-md font-semibold sidebar-link
                      hover:bg-red-600 hover:text-white transition-all duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5"
                     fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H6a2 2 0 01-2-2V7a2 2 0 012-2h5a2 2 0 012 2v1" />
                </svg>
                <span>Logout</span>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 ml-64 p-8 admin-main">
        <!-- Header with User Info -->
        <div class="bg-white rounded-lg shadow-md mb-8 p-6 flex justify-between items-center" style="border-left: 4px solid #7F1734; {% block admin_header_display %}display: flex;{% endblock %}">
            <h1 class="text-3xl font-bold text-burgundy-main">{% block page_title %}Admin Dashboard{% endblock %}</h1>
            <div style="display: flex; align-items: center; gap: 15px;">
                <div style="font-size: 14px; font-weight: 500; color: #333;">
                    Welcome, <strong>{{ app.user.email }}</strong>
                </div>
                <div style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, #7F1734, #9E2B47); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 18px;">
                    {{ app.user.email|slice(0, 1)|upper }}
                </div>
            </div>
        </div>
        {% block admin_content %}{% endblock %}
    </main>
</div>
{% endblock %}

{# Hide base footer #}
{% block footer %}{% endblock %}

{% block javascripts %}
    <script>
        // GLOBAL MODAL SCROLL LOCK â€“ Only runs on modal pages
        if (document.querySelector('.modal-overlay')) {
            document.documentElement.style.overflow = 'hidden';
            document.body.style.overflow = 'hidden';

            const unlock = () => {
                document.documentElement.style.overflow = '';
                document.body.style.overflow = '';
            };

            ['pagehide', 'beforeunload', 'unload'].forEach(event => {
                window.addEventListener(event, unlock);
            });

            document.querySelectorAll('a').forEach(a => {
                a.addEventListener('click', () => setTimeout(unlock, 100));
            });

            setTimeout(unlock, 1000);
        }
    </script>
{% endblock %}
