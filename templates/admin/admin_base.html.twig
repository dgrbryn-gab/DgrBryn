{% extends 'base.html.twig' %}

{% block title %}Admin - {% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<style>
    header { display: none !important; }

    .wine-gradient {
        background: linear-gradient(180deg, #5E0B15 0%, #7B1E3A 100%);
    }

    .hover-wine:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    body {
        background-image: url('https://www.transparenttextures.com/patterns/dark-wood.png');
        background-repeat: repeat;
    }

    .wine-shadow {
        box-shadow: 0 4px 6px rgba(123, 30, 58, 0.2);
    }
</style>
{% endblock %}

{% block body %}
<div class="min-h-screen flex text-gray-900">
    <!-- Sidebar -->
    <aside class="w-64 wine-gradient text-white sticky top-0 min-h-screen border-r border-[#6F0F26] flex flex-col">
        <div class="px-6 py-8 border-b border-white/20 text-center">
            <div class="flex items-center justify-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-pink-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 8c1.657 0 3-1.343 3-3S13.657 2 12 2 9 3.343 9 5s1.343 3 3 3zM5 22l7-7 7 7" />
                </svg>
                <h1 class="text-2xl font-extrabold tracking-wide">Wine Admin</h1>
            </div>
            <p class="text-white/70 text-sm mt-2">Fine Cellar Management</p>
        </div>

        <nav class="mt-6 px-2 space-y-2 flex-1">
            <a href="{{ path('admin') }}" class="block px-4 py-3 rounded-md hover-wine font-semibold">🏠 Dashboard</a>
            <a href="{{ categoryUrl }}" class="block px-4 py-3 rounded-md hover-wine font-semibold">🍇 Categories</a>
            <a href="{{ productUrl }}" class="block px-4 py-3 rounded-md hover-wine font-semibold">🍷 Products</a>
            <a href="{{ inventoryUrl }}" class="block px-4 py-3 rounded-md hover-wine font-semibold">📦 Inventory</a>
        </nav>

        <div class="border-t border-white/20 px-6 py-4 text-sm text-white/70">
            <p>© {{ "now"|date("Y") }} Wine Cellar</p>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 bg-gray-50">
        {% block admin_content %}{% endblock %}
    </main>
</div>
{% endblock %}
