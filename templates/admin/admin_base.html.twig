{# templates/admin/admin_base.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Admin - {% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<style>
    /* Hide base header/navigation globally */
    header, nav.navbar, .site-header {
        display: none !important;
    }

    /* Also hide base footer */
    footer, .site-footer {
        display: none !important;
    }

    /* Sidebar gradient and styles */
    .wine-gradient {
        background: linear-gradient(180deg, #5E0B15 0%, #7B1E3A 100%);
    }

    .hover-wine:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .wine-shadow {
        box-shadow: 0 4px 6px rgba(123, 30, 58, 0.2);
    }
</style>
{% endblock %}

{% block body %}
<div class="min-h-screen flex text-gray-900">

    <!-- Sidebar -->
    <aside class="w-64 wine-gradient text-white fixed top-0 left-0 h-screen border-r border-[#6F0F26] flex flex-col z-50">
        <div class="px-6 py-8 border-b border-white/20 text-center">
            <div class="flex items-center justify-center space-x-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-pink-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 8c1.657 0 3-1.343 3-3S13.657 2 12 2 9 3.343 9 5s1.343 3 3 3zM5 22l7-7 7 7" />
                </svg>
                <h1 class="text-2xl font-extrabold tracking-wide">Wine Admin</h1>
            </div>
            <p class="text-white/70 text-sm mt-2">Fine Cellar Management</p>
        </div>

        <nav class="mt-6 px-2 space-y-2 flex-1">
            <a href="{{ path('admin_dashboard') }}"
               class="block px-4 py-3 rounded-md hover-wine font-semibold {{ app.request.get('_route') == 'admin_dashboard' ? 'bg-white/10' : '' }}">ğŸ  Dashboard</a>
            <a href="{{ path('app_category_index') }}"
               class="block px-4 py-3 rounded-md hover-wine font-semibold {{ app.request.get('_route') starts with 'app_category' ? 'bg-white/10' : '' }}">ğŸ‡ Categories</a>
            <a href="{{ path('app_store_product_index') }}"
               class="block px-4 py-3 rounded-md hover-wine font-semibold {{ app.request.get('_route') starts with 'app_store_product' ? 'bg-white/10' : '' }}">ğŸ· Products</a>
            <a href="{{ path('app_wine_inventory_index') }}"
               class="block px-4 py-3 rounded-md hover-wine font-semibold {{ app.request.get('_route') starts with 'app_wine_inventory' ? 'bg-white/10' : '' }}">ğŸ“¦ Inventory</a>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 bg-gray-50 ml-64 p-8">
        {% block admin_content %}{% endblock %}
    </main>
</div>
{% endblock %}

{# Override base footer so it doesnâ€™t show in admin pages #}
{% block footer %}{% endblock %}
