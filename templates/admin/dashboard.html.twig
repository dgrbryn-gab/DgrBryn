{% extends 'admin/admin_base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block admin_content %}
<section class="bg-white border-b border-gray-200 shadow-sm">
    <div class="max-w-7xl mx-auto px-6 py-8">
        <h2 class="text-4xl font-bold text-[#5E0B15]">üç∑ Admin Dashboard</h2>
        <p class="text-gray-700 mt-1">Manage categories, products, and inventory ‚Äî your digital wine cellar at a glance.</p>
    </div>
</section>

<!-- Overview Cards -->
<section class="max-w-7xl mx-auto px-6 py-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Total Categories -->
    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm transition card-hover">
        <div class="flex items-center">
            <div class="w-16 h-16 rounded-lg flex items-center justify-center mr-4 icon-badge badge-burgundy">
                <span class="text-5xl" aria-hidden="true">üçá</span>
            </div>
            <div class="flex-1 flex flex-col items-center justify-center text-center">
                <p class="text-sm text-gray-500 uppercase font-medium card-label">Total Categories</p>
                <h3 class="text-4xl font-bold text-[#5E0B15] mt-2 card-count">{{ totalCategories }}</h3>
            </div>
        </div>
    </div>

    <!-- Total Products -->
    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm transition card-hover">
        <div class="flex items-center">
            <div class="w-16 h-16 rounded-lg flex items-center justify-center mr-4 icon-badge badge-burgundy">
                <span class="text-5xl" aria-hidden="true">üç∑</span>
            </div>
            <div class="flex-1 flex flex-col items-center justify-center text-center">
                <p class="text-sm text-gray-500 uppercase font-medium card-label">Total Products</p>
                <h3 class="text-4xl font-bold text-[#5E0B15] mt-2 card-count">{{ totalProducts }}</h3>
            </div>
        </div>
    </div>

    <!-- Inventory Items -->
    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm transition card-hover">
        <div class="flex items-center">
            <div class="w-16 h-16 rounded-lg flex items-center justify-center mr-4 icon-badge badge-burgundy">
                <span class="text-5xl" aria-hidden="true">üì¶</span>
            </div>
            <div class="flex-1 flex flex-col items-center justify-center text-center">
                <p class="text-sm text-gray-500 uppercase font-medium card-label">Inventory Items</p>
                <h3 class="text-4xl font-bold text-[#5E0B15] mt-2 card-count">{{ totalInventory }}</h3>
            </div>
        </div>
    </div>

    <!-- Low Stock Alerts -->
    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm transition card-hover">
        <div class="flex items-center">
            <div class="w-16 h-16 rounded-lg flex items-center justify-center mr-4 icon-badge badge-red">
                <span class="text-5xl" aria-hidden="true">‚ö†Ô∏è</span>
            </div>
            <div class="flex-1 flex flex-col items-center justify-center text-center">
                <p class="text-sm text-gray-500 uppercase font-medium card-label">Low Stock Alerts</p>
                <h3 class="text-4xl font-bold text-red-600 mt-2 card-count">{{ lowStockItems }}</h3>
            </div>
        </div>
    </div>
</section>

<!-- Quick Actions -->
<section class="max-w-7xl mx-auto px-6 pb-8">
    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-extrabold text-[#7F1734] tracking-tight">‚ö° Quick Actions</h3>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <a href="{{ path('app_category_new') }}"
               class="w-full text-center px-5 py-3 rounded-xl shadow font-semibold transition-all duration-300 border bg-[#7F1734] text-[#F8EAD8] border-[#EFCFB4] btn-hover">
                + Add Category
            </a>

            <a href="{{ path('app_store_product_new') }}"
               class="w-full text-center px-5 py-3 rounded-xl shadow font-semibold transition-all duration-300 border bg-[#7F1734] text-[#F8EAD8] border-[#EFCFB4] btn-hover">
                + Add Product
            </a>
        </div>
    </div>
</section>

<!-- Main Navigation Tiles -->
<section class="max-w-7xl mx-auto px-6 py-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <a href="{{ categoryUrl }}" class="block rounded-xl border border-gray-200 bg-white hover:shadow-lg transition-shadow">
            <div class="p-6 flex flex-col items-center text-center">
                <i class="fas fa-layer-group text-3xl text-[#5E0B15] mb-3"></i>
                <h3 class="text-lg font-semibold mt-1">üçá Categories</h3>
                <p class="text-sm text-gray-700 mt-1">Create, edit, and organize wine categories.</p>
            </div>
        </a>

        <a href="{{ productUrl }}" class="block rounded-xl border border-gray-200 bg-white hover:shadow-lg transition-shadow">
            <div class="p-6 flex flex-col items-center text-center">
                <i class="fas fa-wine-bottle text-3xl text-[#5E0B15] mb-3"></i>
                <h3 class="text-lg font-semibold mt-1">üç∑ Products</h3>
                <p class="text-sm text-gray-700 mt-1">Manage wine products, pricing, and availability.</p>
            </div>
        </a>

        <a href="{{ inventoryUrl }}" class="block rounded-xl border border-gray-200 bg-white hover:shadow-lg transition-shadow">
            <div class="p-6 flex flex-col items-center text-center">
                <i class="fas fa-boxes-stacked text-3xl text-[#5E0B15] mb-3"></i>
                <h3 class="text-lg font-semibold mt-1">üì¶ Inventory</h3>
                <p class="text-sm text-gray-700 mt-1">Track stock quantities and acquisition dates.</p>
            </div>
        </a>
    </div>
</section>
{% endblock %}
