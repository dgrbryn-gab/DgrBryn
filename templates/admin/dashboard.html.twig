{% extends 'admin/admin_base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block admin_content %}
<section class="bg-white border-b border-gray-200 shadow-sm">
    <div class="max-w-7xl mx-auto px-6 py-8">
        <h2 class="text-4xl font-bold text-[#5E0B15]">üç∑ Admin Dashboard</h2>
        <p class="text-gray-700 mt-1">Manage categories, products, and inventory ‚Äî your digital wine cellar at a glance.</p>
    </div>
</section>

<!-- Overview Cards -->
<section class="max-w-7xl mx-auto px-6 py-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Total Categories -->
    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 uppercase font-medium">Total Categories</p>
                <h3 class="text-3xl font-bold text-[#5E0B15] mt-2">{{ totalCategories }}</h3>
            </div>
            <div class="bg-[#5E0B15]/10 p-3 rounded-lg">
                <i class="fas fa-layer-group text-[#5E0B15] text-xl"></i>
            </div>
        </div>
    </div>

    <!-- Total Products -->
    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 uppercase font-medium">Total Products</p>
                <h3 class="text-3xl font-bold text-[#5E0B15] mt-2">{{ totalProducts }}</h3>
            </div>
            <div class="bg-[#5E0B15]/10 p-3 rounded-lg">
                <i class="fas fa-wine-bottle text-[#5E0B15] text-xl"></i>
            </div>
        </div>
    </div>

    <!-- Inventory Items -->
    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 uppercase font-medium">Inventory Items</p>
                <h3 class="text-3xl font-bold text-[#5E0B15] mt-2">{{ totalInventory }}</h3>
            </div>
            <div class="bg-[#5E0B15]/10 p-3 rounded-lg">
                <i class="fas fa-boxes text-[#5E0B15] text-xl"></i>
            </div>
        </div>
    </div>

    <!-- Low Stock Alerts -->
    <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 uppercase font-medium">Low Stock Alerts</p>
                <h3 class="text-3xl font-bold text-red-600 mt-2">{{ lowStockItems }}</h3>
            </div>
            <div class="bg-red-100 p-3 rounded-lg">
                <i class="fas fa-exclamation-triangle text-red-600 text-xl"></i>
            </div>
        </div>
    </div>
</section>

<!-- Quick Actions -->
<section class="max-w-7xl mx-auto px-6 pb-8">
    <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-2xl font-extrabold text-[#7F1734] tracking-tight">‚ö° Quick Actions</h3>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <a href="{{ path('app_category_new') }}"
               class="w-full text-center px-5 py-3 rounded-xl shadow font-semibold transition-all duration-300 border"
               style="background-color: #7F1734; color: #F8EAD8; border-color: #EFCFB4;"
               onmouseover="this.style.backgroundColor='#9E2B47';"
               onmouseout="this.style.backgroundColor='#7F1734';">
                + Add Category
            </a>

            <a href="{{ path('app_store_product_new') }}"
               class="w-full text-center px-5 py-3 rounded-xl shadow font-semibold transition-all duration-300 border"
               style="background-color: #7F1734; color: #F8EAD8; border-color: #EFCFB4;"
               onmouseover="this.style.backgroundColor='#9E2B47';"
               onmouseout="this.style.backgroundColor='#7F1734';">
                + Add Product
            </a>
        </div>
    </div>
</section>

<!-- Main Navigation Tiles -->
<section class="max-w-7xl mx-auto px-6 py-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <a href="{{ categoryUrl }}" class="block rounded-xl border border-gray-200 bg-white hover:shadow-lg transition-shadow">
            <div class="p-6 flex flex-col items-center text-center">
                <i class="fas fa-layer-group text-3xl text-[#5E0B15] mb-3"></i>
                <h3 class="text-lg font-semibold mt-1">üçá Categories</h3>
                <p class="text-sm text-gray-700 mt-1">Create, edit, and organize wine categories.</p>
            </div>
        </a>

        <a href="{{ productUrl }}" class="block rounded-xl border border-gray-200 bg-white hover:shadow-lg transition-shadow">
            <div class="p-6 flex flex-col items-center text-center">
                <i class="fas fa-wine-bottle text-3xl text-[#5E0B15] mb-3"></i>
                <h3 class="text-lg font-semibold mt-1">üç∑ Products</h3>
                <p class="text-sm text-gray-700 mt-1">Manage wine products, pricing, and availability.</p>
            </div>
        </a>

        <a href="{{ inventoryUrl }}" class="block rounded-xl border border-gray-200 bg-white hover:shadow-lg transition-shadow">
            <div class="p-6 flex flex-col items-center text-center">
                <i class="fas fa-boxes-stacked text-3xl text-[#5E0B15] mb-3"></i>
                <h3 class="text-lg font-semibold mt-1">üì¶ Inventory</h3>
                <p class="text-sm text-gray-700 mt-1">Track stock quantities and acquisition dates.</p>
            </div>
        </a>
    </div>
</section>
{% endblock %}
