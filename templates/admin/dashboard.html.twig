{% extends 'admin/admin_base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block admin_content %}
<div class="min-h-screen bg-gradient-to-b from-[#FFF8F0] to-[#F8EAD8] py-8 px-6">
    <div class="max-w-7xl mx-auto">

        <!-- Header Section -->
        <div class="mb-10">
            <h1 class="text-4xl font-extrabold text-[#5E0B15] tracking-tight mb-2">Admin Dashboard</h1>
            <p class="text-[#7F1734] text-sm italic">Manage categories, products, inventory, and orders — your digital wine cellar at a glance.</p>
        </div>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-6 mb-10">

            <!-- Total Categories -->
            <div class="bg-white/90 backdrop-blur-sm rounded-xl border border-[#EFCFB4]/50 p-6 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-300">
                <p class="text-gray-500 text-xs uppercase font-semibold tracking-wide">Total Categories</p>
                <h3 class="text-3xl font-bold text-[#7F1734] mt-2">{{ totalCategories }}</h3>
                <p class="text-[#7F1734] text-xs font-medium mt-2">Active categories</p>
            </div>

            <!-- Total Products -->
            <div class="bg-white/90 backdrop-blur-sm rounded-xl border border-[#EFCFB4]/50 p-6 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-300">
                <p class="text-gray-500 text-xs uppercase font-semibold tracking-wide">Total Products</p>
                <h3 class="text-3xl font-bold text-[#7F1734] mt-2">{{ totalProducts }}</h3>
                <p class="text-[#7F1734] text-xs font-medium mt-2">Wine products</p>
            </div>

            <!-- Total Inventory -->
            <div class="bg-white/90 backdrop-blur-sm rounded-xl border border-[#EFCFB4]/50 p-6 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-300">
                <p class="text-gray-500 text-xs uppercase font-semibold tracking-wide">Inventory Items</p>
                <h3 class="text-3xl font-bold text-[#7F1734] mt-2">{{ totalInventory }}</h3>
                <p class="text-[#7F1734] text-xs font-medium mt-2">Total stock</p>
            </div>

            <!-- Total Orders -->
            <div class="bg-white/90 backdrop-blur-sm rounded-xl border border-orange-300 p-6 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-300">
                <p class="text-gray-500 text-xs uppercase font-semibold tracking-wide">Total Orders</p>
                <h3 class="text-3xl font-bold text-orange-600 mt-2">{{ totalOrders }}</h3>
                <p class="text-orange-600 text-xs font-medium mt-2">All orders</p>
            </div>

            <!-- Low Stock Alerts -->
            <div class="bg-white/90 backdrop-blur-sm rounded-xl border border-red-300 p-6 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-300">
                <p class="text-gray-500 text-xs uppercase font-semibold tracking-wide">Low Stock Alerts</p>
                <h3 class="text-3xl font-bold text-red-600 mt-2">{{ lowStockItems }}</h3>
                <p class="text-red-600 text-xs font-medium mt-2">Need attention</p>
            </div>
        </div>

        <!-- Order Statistics + Revenue -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-10">

            <!-- Order Status Breakdown -->
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200 hover:shadow-2xl transition-all duration-300">
                <div class="px-8 py-6 bg-gradient-to-r from-[#7F1734] to-[#5E0B15] text-white">
                    <h2 class="text-2xl font-extrabold tracking-tight">Order Status Breakdown</h2>
                </div>
                <div class="p-8 space-y-4">
                    <div class="flex items-center justify-between p-4 rounded-lg bg-yellow-50 border border-yellow-200">
                        <span class="font-semibold text-yellow-800">Pending</span>
                        <span class="text-2xl font-bold text-yellow-700">{{ pendingOrders }}</span>
                    </div>
                    <div class="flex items-center justify-between p-4 rounded-lg bg-blue-50 border border-blue-200">
                        <span class="font-semibold text-blue-800">Processing</span>
                        <span class="text-2xl font-bold text-blue-700">{{ processingOrders }}</span>
                    </div>
                    <div class="flex items-center justify-between p-4 rounded-lg bg-purple-50 border border-purple-200">
                        <span class="font-semibold text-purple-800">Shipped</span>
                        <span class="text-2xl font-bold text-purple-700">{{ shippedOrders }}</span>
                    </div>
                    <div class="flex items-center justify-between p-4 rounded-lg bg-green-50 border border-green-200">
                        <span class="font-semibold text-green-800">Delivered</span>
                        <span class="text-2xl font-bold text-green-700">{{ deliveredOrders }}</span>
                    </div>
                </div>
            </div>

            <!-- Revenue Summary -->
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200 hover:shadow-2xl transition-all duration-300">
                <div class="px-8 py-6 bg-gradient-to-r from-[#9E2B47] to-[#7F1734] text-white">
                    <h2 class="text-2xl font-extrabold tracking-tight">Revenue Summary</h2>
                </div>
                <div class="p-8 text-center">
                    <p class="text-[#7F1734] text-sm uppercase font-semibold tracking-wide mb-2">Total Revenue</p>
                    <h3 class="text-5xl font-extrabold text-[#7F1734] mb-6">₱{{ totalRevenue|number_format(2) }}</h3>
                    <div class="text-left max-w-xs mx-auto">
                        <div class="p-3 bg-gray-50 rounded-lg">
                            <p class="text-xs text-[#7F1734] uppercase font-semibold">From Active Orders</p>
                            <p class="text-lg font-bold text-[#7F1734] mt-1">{{ totalOrders }} Orders</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200 mb-10 hover:shadow-2xl transition-all duration-300">
            <div class="px-8 py-6 bg-gradient-to-r from-[#7F1734] to-[#5E0B15] text-white">
                <h2 class="text-2xl font-extrabold tracking-tight">Quick Actions</h2>
            </div>
            <div class="p-8">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                    <a href="{{ path('app_category_new') }}"
                    class="p-4 text-center bg-gradient-to-br from-[#EFCFB4] to-[#D4AF9A] text-[#7F1734] rounded-xl font-semibold hover:shadow-lg hover:from-[#D4AF9A] hover:to-[#B89480] transition-all duration-300 border border-[#D4AF9A]">
                        Add Category
                    </a>
                    <a href="{{ path('app_store_product_new') }}"
                    class="p-4 text-center bg-gradient-to-br from-[#EFCFB4] to-[#D4AF9A] text-[#7F1734] rounded-xl font-semibold hover:shadow-lg hover:from-[#D4AF9A] hover:to-[#B89480] transition-all duration-300 border border-[#D4AF9A]">
                        Add Product
                    </a>
                    <a href="{{ path('app_wine_inventory_new') }}"
                    class="p-4 text-center bg-gradient-to-br from-[#EFCFB4] to-[#D4AF9A] text-[#7F1734] rounded-xl font-semibold hover:shadow-lg hover:from-[#D4AF9A] hover:to-[#B89480] transition-all duration-300 border border-[#D4AF9A]">
                        Add Inventory
                    </a>
                    <a href="{{ path('app_order_new') }}"
                    class="p-4 text-center bg-gradient-to-br from-[#7F1734] to-[#5E0B15] text-[#7F1734] rounded-xl font-semibold hover:shadow-lg hover:from-[#5E0B15] hover:to-[#3D0A0C] transition-all duration-300 border border-[#5E0B15]">
                        Create Order
                    </a>
                </div>
            </div>
        </div>

        <!-- Management Sections -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

            <!-- Categories -->
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200 hover:shadow-2xl transition-all duration-300">
                <div class="px-8 py-6 bg-gradient-to-r from-[#7F1734] to-[#9E2B47] text-white">
                    <h3 class="text-2xl font-extrabold tracking-tight">Categories</h3>
                </div>
                <div class="p-8">
                    <p class="text-[#7F1734] mb-6 font-medium">Create and organize wine categories for better product management.</p>
                    <a href="{{ categoryUrl }}"
                    class="block text-center px-6 py-3 text-[#7F1734] rounded-xl font-semibold bg-gradient-to-r from-[#EFCFB4] to-[#D4AF9A] hover:from-[#D4AF9A] hover:to-[#B89480] hover:shadow-lg transition-all duration-300 border border-[#D4AF9A]">
                        Manage Categories
                    </a>
                </div>
            </div>

            <!-- Products -->
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200 hover:shadow-2xl transition-all duration-300">
                <div class="px-8 py-6 bg-gradient-to-r from-[#9E2B47] to-[#7F1734] text-white">
                    <h3 class="text-2xl font-extrabold tracking-tight">Products</h3>
                </div>
                <div class="p-8">
                    <p class="text-[#7F1734] mb-6 font-medium">Manage wine products, pricing, descriptions, and availability.</p>
                    <a href="{{ productUrl }}"
                    class="block text-center px-6 py-3 text-[#7F1734] rounded-xl font-semibold bg-gradient-to-r from-[#EFCFB4] to-[#D4AF9A] hover:from-[#D4AF9A] hover:to-[#B89480] hover:shadow-lg transition-all duration-300 border border-[#D4AF9A]">
                        Manage Products
                    </a>
                </div>
            </div>

            <!-- Inventory -->
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200 hover:shadow-2xl transition-all duration-300">
                <div class="px-8 py-6 bg-gradient-to-r from-[#7F1734] to-[#5E0B15] text-white">
                    <h3 class="text-2xl font-extrabold tracking-tight">Inventory</h3>
                </div>
                <div class="p-8">
                    <p class="text-[#7F1734] mb-6 font-medium">Track stock quantities, acquisition dates, and inventory levels.</p>
                    <a href="{{ inventoryUrl }}"
                    class="block text-center px-6 py-3 text-[#7F1734] rounded-xl font-semibold bg-gradient-to-r from-[#EFCFB4] to-[#D4AF9A] hover:from-[#D4AF9A] hover:to-[#B89480] hover:shadow-lg transition-all duration-300 border border-[#D4AF9A]">
                        Manage Inventory
                    </a>
                </div>
            </div>

            <!-- Orders -->
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200 hover:shadow-2xl transition-all duration-300">
                <div class="px-8 py-6 bg-gradient-to-r from-[#5E0B15] to-[#7F1734] text-white">
                    <h3 class="text-2xl font-extrabold tracking-tight">Orders</h3>
                </div>
                <div class="p-8">
                    <p class="text-[#7F1734] mb-6 font-medium">Manage customer orders, shipping, and order status updates.</p>
                    <a href="{{ orderUrl }}"
                    class="block text-center px-6 py-3 text-[#7F1734] rounded-xl font-semibold bg-gradient-to-r from-[#EFCFB4] to-[#D4AF9A] hover:from-[#D4AF9A] hover:to-[#B89480] hover:shadow-lg transition-all duration-300 border border-[#D4AF9A]">
                        Manage Orders
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}