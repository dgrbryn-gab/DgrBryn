{% extends 'admin/admin_base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block admin_content %}
<div class="mb-8">
    <!-- Header Section -->
    <div class="mb-8">
        <h1 class="text-4xl font-bold text-burgundy-main mb-2">Admin Dashboard</h1>
        <p class="text-burgundy-main text-sm">Manage categories, products, inventory, and orders ‚Äî your digital wine cellar at a glance.</p>
    </div>

    <!-- Statistics Cards -->
    <div class="dashboard-grid grid-cols-5 mb-8">
        <!-- Total Categories -->
        <div class="stat-card burgundy">
            <span class="stat-label">Total Categories</span>
            <h3 class="stat-value">{{ totalCategories }}</h3>
            <span class="stat-description">Active categories</span>
        </div>

        <!-- Total Products -->
        <div class="stat-card burgundy">
            <span class="stat-label">Total Products</span>
            <h3 class="stat-value">{{ totalProducts }}</h3>
            <span class="stat-description">Wine products</span>
        </div>

        <!-- Total Inventory -->
        <div class="stat-card burgundy">
            <span class="stat-label">Inventory Items</span>
            <h3 class="stat-value">{{ totalInventory }}</h3>
            <span class="stat-description">Total stock</span>
        </div>

        <!-- Total Orders -->
        <div class="stat-card orange">
            <span class="stat-label">Total Orders</span>
            <h3 class="stat-value">{{ totalOrders }}</h3>
            <span class="stat-description">All orders</span>
        </div>

        <!-- Low Stock Alerts -->
        <div class="stat-card red">
            <span class="stat-label">Low Stock Alerts</span>
            <h3 class="stat-value">{{ lowStockItems }}</h3>
            <span class="stat-description">Need attention</span>
        </div>
    </div>

    <!-- Order Status + Revenue -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- Order Status Breakdown -->
        <div class="dashboard-card">
            <div class="dashboard-card-header">
                Order Status Breakdown
            </div>
            <div class="dashboard-card-body">
                <div class="status-badge status-pending">
                    <span class="status-label">Pending</span>
                    <span class="status-value">{{ pendingOrders }}</span>
                </div>
                <div class="status-badge status-processing">
                    <span class="status-label">Processing</span>
                    <span class="status-value">{{ processingOrders }}</span>
                </div>
                <div class="status-badge status-shipped">
                    <span class="status-label">Shipped</span>
                    <span class="status-value">{{ shippedOrders }}</span>
                </div>
                <div class="status-badge status-delivered">
                    <span class="status-label">Delivered</span>
                    <span class="status-value">{{ deliveredOrders }}</span>
                </div>
            </div>
        </div>

        <!-- Revenue Summary -->
        <div class="dashboard-card">
            <div class="dashboard-card-header">
                Revenue Summary
            </div>
            <div class="dashboard-card-body">
                <div style="text-align: center;">
                    <p class="stat-label">Total Revenue</p>
                    <h3 class="stat-value" style="margin: 16px 0;">‚Ç±{{ totalRevenue|number_format(2) }}</h3>
                    <div class="welcome-box" style="max-width: 300px; margin: 0 auto;">
                        <p style="margin: 0;">
                            <strong>From Active Orders</strong><br>
                            {{ totalOrders }} Orders
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="dashboard-card mb-8">
        <div class="dashboard-card-header">
            ‚ö° Quick Actions
        </div>
        <div class="dashboard-card-body">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <a href="{{ path('app_category_new') }}" class="action-link beige">
                    <span class="action-icon">üìÅ</span>
                    <span>Add Category</span>
                </a>
                <a href="{{ path('app_store_product_new') }}" class="action-link beige">
                    <span class="action-icon">üç∑</span>
                    <span>Add Product</span>
                </a>
                <a href="{{ path('app_wine_inventory_new') }}" class="action-link beige">
                    <span class="action-icon">üì¶</span>
                    <span>Add Inventory</span>
                </a>
                <a href="{{ path('app_order_new') }}" class="action-link burgundy">
                    <span class="action-icon">üõí</span>
                    <span>Create Order</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Management Sections -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Categories -->
        <div class="dashboard-card">
            <div class="dashboard-card-header">
                Categories
            </div>
            <div class="dashboard-card-body">
                <p class="content-description">Create and organize wine categories for better product management.</p>
                <a href="{{ categoryUrl }}" class="btn-beige" style="display: block; text-align: center;">Manage Categories</a>
            </div>
        </div>

        <!-- Products -->
        <div class="dashboard-card">
            <div class="dashboard-card-header">
                Products
            </div>
            <div class="dashboard-card-body">
                <p class="content-description">Manage wine products, pricing, descriptions, and availability.</p>
                <a href="{{ productUrl }}" class="btn-beige" style="display: block; text-align: center;">Manage Products</a>
            </div>
        </div>

        <!-- Inventory -->
        <div class="dashboard-card">
            <div class="dashboard-card-header">
                Inventory
            </div>
            <div class="dashboard-card-body">
                <p class="content-description">Track stock quantities, acquisition dates, and inventory levels.</p>
                <a href="{{ inventoryUrl }}" class="btn-beige" style="display: block; text-align: center;">Manage Inventory</a>
            </div>
        </div>

        <!-- Orders -->
        <div class="dashboard-card">
            <div class="dashboard-card-header">
                Orders
            </div>
            <div class="dashboard-card-body">
                <p class="content-description">Manage customer orders, shipping, and order status updates.</p>
                <a href="{{ orderUrl }}" class="btn-beige" style="display: block; text-align: center;">Manage Orders</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}