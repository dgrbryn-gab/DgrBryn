{% extends 'base.html.twig' %}

{% block title %}Wine Inventory{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Wine Inventory</h1>

        <table class="w-full border-collapse bg-white shadow-md rounded-lg overflow-hidden">
            <thead>
                <tr class="bg-gray-900 text-white">
                    <th class="py-3 px-4 text-left">ID</th>
                    <th class="py-3 px-4 text-left">Product Name</th>
                    <th class="py-3 px-4 text-left">Quantity</th>
                    <th class="py-3 px-4 text-left">Acquired Date</th>
                    <th class="py-3 px-4 text-left">Last Updated</th>
                    <th class="py-3 px-4 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for wine_inventory in wine_inventories %}
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-4">{{ wine_inventory.id }}</td>
                        <td class="py-3 px-4">{{ wine_inventory.product.name }}</td>
                        <td class="py-3 px-4">{{ wine_inventory.quantity }}</td>
                        <td class="py-3 px-4">{{ wine_inventory.acquiredDate ? wine_inventory.acquiredDate|date('Y-m-d') : '' }}</td>
                        <td class="py-3 px-4">{{ wine_inventory.lastUpdated ? wine_inventory.lastUpdated|date('Y-m-d H:i:s') : '' }}</td>
                        <td class="py-3 px-4">
                            <a href="{{ path('app_wine_inventory_show', {'id': wine_inventory.id}) }}" class="text-white bg-gray-900 hover:bg-amber-500 hover:text-white font-medium py-1 px-3 rounded transition-colors duration-300 mr-2">Show</a>
                            <a href="{{ path('app_wine_inventory_edit', {'id': wine_inventory.id}) }}" class="text-white bg-gray-900 hover:bg-amber-500 hover:text-white font-medium py-1 px-3 rounded transition-colors duration-300">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="py-3 px-4 text-center text-gray-600">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    
    </div>
{% endblock %}