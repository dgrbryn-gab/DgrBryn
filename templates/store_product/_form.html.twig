{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="space-y-4">
        {# üç∑ Category Dropdown (displayed first) #}
        {% if form.category is defined %}
            <div>
                {{ form_label(form.category, 'Category', {'label_attr': {'class': 'block text-rose-900 font-semibold mb-2'}}) }}
                {{ form_widget(form.category, {'attr': {
                    'class': 'w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-rose-400 focus:outline-none bg-white'
                }}) }}
                {{ form_errors(form.category) }}
            </div>
        {% endif %}

        {# Render all other fields except category and _token #}
        {% for field in form %}
            {% if field.vars.name not in ['_token', 'category'] %}
                <div>
                    {{ form_label(field, null, {'label_attr': {'class': 'block text-rose-900 font-semibold mb-2'}}) }}
                    {{ form_widget(field, {'attr': {
                        'class': 'w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-rose-400 focus:outline-none'
                    }}) }}
                    {{ form_errors(field) }}
                </div>
            {% endif %}
        {% endfor %}
    </div>

    {# Render CSRF token (hidden) #}
    {{ form_widget(form._token) }}

    <div class="text-center mt-8">
        <button type="submit" 
                class="px-6 py-2 text-white rounded-xl shadow transition"
                style="background-color: #7F1734; border: 1px solid #f4e7ce;"
                onmouseover="this.style.backgroundColor='#5c1027';"
                onmouseout="this.style.backgroundColor='#7F1734';">
            {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}
