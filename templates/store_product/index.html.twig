{% extends 'base.html.twig' %}

{% block title %}Store Products{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto py-10">
    <!-- Header + Add Button -->
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-extrabold text-yellow-900 tracking-tight">Store Products</h1>
        <a href="{{ path('app_store_product_new') }}"
           class="px-5 py-2 rounded-xl shadow font-semibold transition-all duration-300 border"
           style="background-color: #7F1734; color: #F8EAD8; border-color: #EFCFB4;"
           onmouseover="this.style.backgroundColor='#9E2B47'"
           onmouseout="this.style.backgroundColor='#7F1734'">
           + Add New Product
        </a>
    </div>

    <!-- Category Filter Bar -->
    <div class="flex flex-wrap gap-3 mb-10">
        <a href="{{ path('app_store_product_index') }}"
           class="px-4 py-2 rounded-full border font-semibold transition-all duration-300
                  {% if not app.request.get('category') %}
                      bg-[#7F1734] text-[#F8EAD8] border-[#EFCFB4]
                  {% else %}
                      bg-white text-[#7F1734] border-[#EFCFB4] hover:bg-[#EFCFB4]
                  {% endif %}">
            All
        </a>

        {% for category in categories %}
            <a href="{{ path('app_store_product_index', {'category': category.id}) }}"
               class="px-4 py-2 rounded-full border font-semibold transition-all duration-300
                      {% if app.request.get('category') == category.id %}
                          bg-[#7F1734] text-[#F8EAD8] border-[#EFCFB4]
                      {% else %}
                          bg-white text-[#7F1734] border-[#EFCFB4] hover:bg-[#EFCFB4]
                      {% endif %}">
                {{ category.name }}
            </a>
        {% endfor %}
    </div>

    {% if store_products is empty %}
        <p class="text-gray-500 text-lg text-center">No products found in this category.</p>
    {% else %}
        <!-- Product Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for store_product in store_products %}
                <div class="group bg-white rounded-2xl shadow-md overflow-hidden border hover:shadow-2xl hover:scale-[1.02] transition-all duration-300">
                    
                    {% if store_product.image %}
                        <img src="{{ asset('assets/images/wine_images/' ~ store_product.image) }}"
                             alt="{{ store_product.name }}"
                             class="w-full h-64 object-contain bg-white p-3 transition-transform duration-500 group-hover:scale-105">
                    {% else %}
                        <div class="w-full h-64 bg-gray-100 flex items-center justify-center text-gray-400">
                            No Image
                        </div>
                    {% endif %}

                    <div class="p-4 rounded-b-2xl relative overflow-hidden transition-all duration-500 ease-in-out"
                         style="background-color: #7F1734; color: #F8EAD8;">
                         
                        <h2 class="text-xl font-bold mb-1">{{ store_product.name }}</h2>
                        <p class="text-sm mb-2 opacity-90">
                            {{ store_product.category ? store_product.category.name : 'Uncategorized' }}
                        </p>

                        {% if store_product.description %}
                            <div class="relative overflow-hidden transition-all duration-700 ease-in-out max-h-14 group-hover:max-h-40">
                                <p class="text-sm italic mb-3 opacity-85 transition-opacity duration-500 group-hover:opacity-100">
                                    {{ store_product.description }}
                                </p>
                                <div class="absolute bottom-0 left-0 right-0 h-8 bg-gradient-to-t from-[#7F1734] to-transparent opacity-70 group-hover:opacity-0 transition-opacity duration-500"></div>
                            </div>
                        {% endif %}

                        <p class="text-lg font-semibold mb-3" style="color: #EFCFB4;">â‚¬{{ store_product.price }}</p>
                        <p class="text-sm mb-4 opacity-85">Stock: {{ store_product.stockQuantity }}</p>

                        <div class="flex space-x-2">
                            <a href="{{ path('app_store_product_show', {'id': store_product.id}) }}"
                               class="flex-1 text-center px-3 py-1 rounded-lg font-semibold transition-all duration-300 border"
                               style="background-color: #B6465F; border-color: #EFCFB4; color: #F8EAD8;"
                               onmouseover="this.style.backgroundColor='#9E2B47'"
                               onmouseout="this.style.backgroundColor='#B6465F'">
                               View
                            </a>
                            <a href="{{ path('app_store_product_edit', {'id': store_product.id}) }}"
                               class="flex-1 text-center px-3 py-1 rounded-lg font-semibold transition-all duration-300 border"
                               style="background-color: #EFCFB4; border-color: #F8EAD8; color: #7F1734;"
                               onmouseover="this.style.backgroundColor='#E3B78E'"
                               onmouseout="this.style.backgroundColor='#EFCFB4'">
                               Edit
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}