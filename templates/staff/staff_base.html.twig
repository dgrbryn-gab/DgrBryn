<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Staff Dashboard - CORK{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
            background: #f8f9fa;
            color: #333;
        }

        .staff-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Navigation */
        .staff-sidebar {
            width: 260px;
            background: linear-gradient(135deg, #7F1734 0%, #4B164C 100%);
            color: white;
            padding: 20px;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .staff-sidebar-header {
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .staff-sidebar-header h2 {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .staff-sidebar-header p {
            font-size: 12px;
            opacity: 0.8;
        }

        .staff-nav {
            list-style: none;
        }

        .staff-nav-item {
            margin-bottom: 8px;
        }

        .staff-nav-link {
            display: block;
            padding: 12px 16px;
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-size: 14px;
            font-weight: 500;
        }

        .staff-nav-link:hover,
        .staff-nav-link.active {
            background: rgba(255, 255, 255, 0.15);
            color: #EFCFB4;
        }

        .staff-nav-divider {
            margin: 15px 0;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* Main Content */
        .staff-main {
            margin-left: 260px;
            flex: 1;
            padding: 30px;
            background: linear-gradient(to bottom, #f8f9fa 0%, #f0e8dc 100%);
            min-height: 100vh;
        }

        .staff-header {
            background: white;
            padding: 20px 30px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .staff-header h1 {
            font-size: 28px;
            color: #7F1734;
            font-weight: 700;
        }

        .staff-user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .staff-user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #7F1734, #9E2B47);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 18px;
        }

        .staff-user-menu {
            position: relative;
        }

        .staff-logout-btn {
            padding: 8px 16px;
            background: #7F1734;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .staff-logout-btn:hover {
            background: #5E0B15;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(127, 23, 52, 0.3);
        }

        /* Flash Messages */
        .alert {
            padding: 16px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 14px;
        }

        .alert-success {
            background: #d4edda;
            border: 1px solid #c3e6cb;
            color: #155724;
        }

        .alert-error {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .staff-sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .staff-main {
                margin-left: 0;
            }

            .staff-header {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

            .staff-container {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="staff-container">
        <!-- Sidebar -->
        <aside class="staff-sidebar">
            <div class="staff-sidebar-header">
                <h2>üç∑ CORK</h2>
                <p>Staff Panel</p>
            </div>

            <nav>
                <ul class="staff-nav">
                    <li class="staff-nav-item">
                        <a href="{{ path('staff_dashboard') }}" class="staff-nav-link {% if app.request.attributes.get('_route') == 'staff_dashboard' %}active{% endif %}">
                            üìä Dashboard
                        </a>
                    </li>
                    <li class="staff-nav-item">
                        <a href="{{ path('staff_products_index') }}" class="staff-nav-link {% if 'staff_products' in app.request.attributes.get('_route') %}active{% endif %}">
                            üç∑ My Products
                        </a>
                    </li>
                    <li class="staff-nav-item">
                        <a href="{{ path('staff_inventory_index') }}" class="staff-nav-link {% if 'staff_inventory' in app.request.attributes.get('_route') %}active{% endif %}">
                            üì¶ My Inventory
                        </a>
                    </li>
                    <li class="staff-nav-item">
                        <a href="{{ path('staff_orders_index') }}" class="staff-nav-link {% if 'staff_orders' in app.request.attributes.get('_route') %}active{% endif %}">
                            üõí My Orders
                        </a>
                    </li>

                    <div class="staff-nav-divider"></div>

                    <li class="staff-nav-item">
                        <a href="{{ path('staff_profile_index') }}" class="staff-nav-link {% if 'staff_profile' in app.request.attributes.get('_route') %}active{% endif %}">
                            üë§ My Profile
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="staff-main">
            <!-- Header with User Info -->
            <div class="staff-header">
                <h1>{% block page_title %}Staff Dashboard{% endblock %}</h1>
                <div class="staff-user-info">
                    <div>
                        <div style="font-size: 14px; font-weight: 500; color: #333;">
                            Welcome, <strong>{{ app.user.email }}</strong>
                        </div>
                    </div>
                    <div class="staff-user-avatar">
                        {{ app.user.email|slice(0, 1)|upper }}
                    </div>
                    <form method="post" action="{{ path('staff_logout') }}" style="margin: 0;">
                        <button type="submit" class="staff-logout-btn">üö™ Logout</button>
                    </form>
                </div>
            </div>

            <!-- Flash Messages -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    ‚úì {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-error">
                    ‚úó {{ message }}
                </div>
            {% endfor %}

            <!-- Page Content -->
            {% block content %}{% endblock %}
        </main>
    </div>

    {{ encore_entry_script_tags('app') }}
</body>
</html>
