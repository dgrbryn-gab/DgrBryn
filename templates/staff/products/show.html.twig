{% extends 'staff/staff_base.html.twig' %}

{% block title %}{{ product.name }} - Staff Dashboard - CORK{% endblock %}

{% block page_title %}{{ product.name }}{% endblock %}

{% block content %}
<div style="max-width: 1000px; margin: 0 auto;">
    <!-- Back Button -->
    <a href="{{ path('staff_products_index') }}" style="
        display: inline-block;
        margin-bottom: 20px;
        color: #7F1734;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    " onmouseover="this.style.transform='translateX(-4px)'" onmouseout="this.style.transform='translateX(0)'">
        ‚Üê Back to Products
    </a>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
        <!-- Product Image -->
        <div style="background: white; padding: 24px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); height: fit-content;">
            {% if product.image %}
                <img 
                    src="{{ asset('assets/images/wine_images/' ~ product.image) }}" 
                    alt="{{ product.name }}"
                    style="
                        width: 100%;
                        border-radius: 8px;
                        object-fit: cover;
                    "
                />
            {% else %}
                <div 
                    style="
                        width: 100%;
                        aspect-ratio: 1;
                        background: linear-gradient(135deg, #7F1734, #9E2B47);
                        border-radius: 8px;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        font-size: 80px;
                    "
                >
                    üç∑
                </div>
            {% endif %}
        </div>

        <!-- Product Details -->
        <div>
            <!-- Product Info Card -->
            <div style="background: white; padding: 24px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); margin-bottom: 20px;">
                <h2 style="font-size: 24px; font-weight: 700; color: #7F1734; margin-bottom: 16px;">
                    {{ product.name }}
                </h2>

                <!-- Price -->
                <div style="
                    font-size: 32px;
                    font-weight: 700;
                    color: #9E2B47;
                    margin-bottom: 24px;
                    border-bottom: 2px solid #e9ecef;
                    padding-bottom: 20px;
                ">
                    ‚Ç±{{ product.price|number_format(2) }}
                </div>

                <!-- Description -->
                <div style="margin-bottom: 24px;">
                    <h4 style="font-size: 14px; color: #888; text-transform: uppercase; font-weight: 600; margin-bottom: 8px;">
                        Description
                    </h4>
                    <p style="color: #666; line-height: 1.6; margin: 0;">
                        {{ product.description }}
                    </p>
                </div>

                <!-- Info Grid -->
                <div style="display: grid; gap: 16px;">
                    <!-- Category -->
                    <div>
                        <label style="font-size: 12px; color: #888; text-transform: uppercase; font-weight: 600; display: block; margin-bottom: 4px;">
                            Category
                        </label>
                        <div style="font-size: 16px; color: #333; font-weight: 500;">
                            {{ product.category.name }}
                        </div>
                    </div>

                    <!-- Created Date -->
                    <div>
                        <label style="font-size: 12px; color: #888; text-transform: uppercase; font-weight: 600; display: block; margin-bottom: 4px;">
                            Created
                        </label>
                        <div style="font-size: 16px; color: #333; font-weight: 500;">
                            {{ product.createdAt|date('M d, Y') }}
                        </div>
                    </div>

                    <!-- Ownership Status -->
                    {% if not is_own_product %}
                        <div style="padding: 12px; background: #e8f4f8; border-left: 4px solid #0099cc; border-radius: 4px;">
                            <label style="font-size: 12px; color: #0099cc; text-transform: uppercase; font-weight: 600; display: block; margin-bottom: 4px;">
                                Status
                            </label>
                            <div style="font-size: 14px; color: #0066aa; font-weight: 500;">
                                üìå Created by Admin
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Action Buttons -->
            {% if is_own_product %}
                <div style="display: flex; gap: 12px;">
                    <a 
                        href="{{ path('staff_products_edit', {'id': product.id}) }}"
                        style="
                            flex: 1;
                            padding: 12px 20px;
                            text-align: center;
                            background: linear-gradient(135deg, #7F1734, #9E2B47);
                            color: white;
                            text-decoration: none;
                            border-radius: 8px;
                            font-weight: 600;
                            transition: all 0.3s ease;
                        "
                        onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 16px rgba(127, 23, 52, 0.3)'"
                        onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'"
                    >
                        ‚úèÔ∏è Edit Product
                    </a>
                    <form method="POST" action="{{ path('staff_products_delete', {'id': product.id}) }}" style="flex: 1;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}"/>
                        <button 
                            type="submit"
                            style="
                                width: 100%;
                                padding: 12px 20px;
                                background: #FFA500;
                                color: white;
                                border: none;
                                border-radius: 8px;
                                font-weight: 600;
                                cursor: pointer;
                                transition: all 0.3s ease;
                            "
                            onmouseover="this.style.background='#FF8C00'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 16px rgba(255, 165, 0, 0.3)'"
                            onmouseout="this.style.background='#FFA500'; this.style.transform='translateY(0)'; this.style.boxShadow='none'"
                        >
                            üóëÔ∏è Delete Product
                        </button>
                    </form>
                </div>
            {% else %}
                <div style="
                    padding: 16px;
                    background: #f0f0f0;
                    border-radius: 8px;
                    text-align: center;
                    color: #666;
                    font-weight: 500;
                ">
                    üîí View Only - This product was created by the admin and cannot be edited or deleted
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Related Inventory Section -->
    {% if product.wineInventories|length > 0 %}
        <div style="margin-top: 40px; background: white; padding: 24px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
            <h3 style="font-size: 18px; font-weight: 700; color: #7F1734; margin-bottom: 20px;">
                üì¶ Inventory Records ({{ product.wineInventories|length }})
            </h3>

            <div style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr style="background: #f8f9fa;">
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #7F1734; border-bottom: 2px solid #e9ecef;">Quantity</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #7F1734; border-bottom: 2px solid #e9ecef;">Acquired Date</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #7F1734; border-bottom: 2px solid #e9ecef;">Last Updated</th>
                            <th style="padding: 12px; text-align: left; font-weight: 600; color: #7F1734; border-bottom: 2px solid #e9ecef;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for inventory in product.wineInventories %}
                            <tr style="border-bottom: 1px solid #e9ecef;">
                                <td style="padding: 12px; color: #333;">{{ inventory.quantity }} units</td>
                                <td style="padding: 12px; color: #666;">
                                    {{ inventory.acquiredDate ? inventory.acquiredDate|date('M d, Y') : 'N/A' }}
                                </td>
                                <td style="padding: 12px; color: #666;">
                                    {{ inventory.lastUpdated|date('M d, Y') }}
                                </td>
                                <td style="padding: 12px;">
                                    <a 
                                        href="{{ path('staff_inventory_show', {'id': inventory.id}) }}"
                                        style="color: #7F1734; text-decoration: none; font-weight: 600; transition: all 0.3s ease;"
                                        onmouseover="this.style.color='#5E0B15'"
                                        onmouseout="this.style.color='#7F1734'"
                                    >
                                        View ‚Üí
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
