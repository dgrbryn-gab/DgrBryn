{% extends 'staff/staff_base.html.twig' %}

{% block title %}Edit Inventory - CORK Staff{% endblock %}

{% block page_title %}Edit Inventory Record{% endblock %}

{% block content %}
<div style="max-width: 700px; margin: 0 auto;">
    <div style="background: white; padding: 30px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); border-left: 4px solid #7F1734;">
        
        <h2 style="font-size: 20px; font-weight: 700; color: #7F1734; margin-bottom: 20px;">
            üìù Edit: {{ wine_inventory.product.name }}
        </h2>

        <!-- Form Errors -->
        {% if form.vars.errors|length > 0 %}
            <div style="margin-bottom: 20px; padding: 15px; background: #f8d7da; border: 1px solid #f5c6cb; border-radius: 6px; color: #721c24;">
                <p style="font-weight: 600; margin: 0 0 10px 0;">Form Errors:</p>
                {% for error in form.vars.errors %}
                    <p style="margin: 5px 0;">- {{ error.message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <!-- Product Field (Read-only info) -->
        <div style="margin-bottom: 20px; padding: 15px; background: #f8f9fa; border-radius: 6px;">
            <p style="font-size: 12px; text-transform: uppercase; color: #888; font-weight: 600; margin-bottom: 5px;">Product</p>
            <p style="font-size: 16px; font-weight: 600; color: #333; margin: 0;">{{ wine_inventory.product.name }}</p>
        </div>

        <!-- Quantity Field -->
        <div style="margin-bottom: 20px;">
            {{ form_label(form.quantity, 'Quantity', {'label_attr': {'style': 'display: block; font-weight: 600; margin-bottom: 8px; color: #333;'}}) }}
            {{ form_widget(form.quantity, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;', 'type': 'number', 'min': '0'}}) }}
            {% if form_errors(form.quantity) %}
                <div style="color: #dc3545; font-size: 12px; margin-top: 5px;">
                    {% for error in form_errors(form.quantity) %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <!-- Acquired Date Field -->
        <div style="margin-bottom: 20px;">
            {{ form_label(form.acquiredDate, 'Acquired Date', {'label_attr': {'style': 'display: block; font-weight: 600; margin-bottom: 8px; color: #333;'}}) }}
            {{ form_widget(form.acquiredDate, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;'}}) }}
            {% if form_errors(form.acquiredDate) %}
                <div style="color: #dc3545; font-size: 12px; margin-top: 5px;">
                    {% for error in form_errors(form.acquiredDate) %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <!-- Action Buttons -->
        <div style="display: flex; gap: 12px; margin-top: 30px;">
            <button type="submit" style="flex: 1; padding: 12px; background: #7F1734; color: white; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; font-size: 14px; transition: all 0.3s ease;" onmouseover="this.style.background='#5E0B15'" onmouseout="this.style.background='#7F1734'">
                ‚úì Update Record
            </button>
            <a href="{{ path('staff_inventory_show', {'id': wine_inventory.id}) }}" style="flex: 1; padding: 12px; background: #EFCFB4; color: #7F1734; text-decoration: none; border-radius: 6px; font-weight: 600; text-align: center; font-size: 14px; transition: all 0.3s ease;" onmouseover="this.style.background='#D4AF9A'" onmouseout="this.style.background='#EFCFB4'">
                ‚úï Cancel
            </a>
        </div>

        <!-- Delete Option -->
        <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid #e0e0e0;">
            <form method="POST" action="{{ path('staff_inventory_delete', {'id': wine_inventory.id}) }}" onsubmit="return confirm('Are you sure you want to delete this inventory record?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ wine_inventory.id) }}">
                <button type="submit" style="padding: 10px 20px; background: #dc3545; color: white; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; font-size: 14px;">
                    üóëÔ∏è Delete Record
                </button>
            </form>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
