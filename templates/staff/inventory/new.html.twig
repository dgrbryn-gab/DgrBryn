{% extends 'staff/staff_base.html.twig' %}

{% block title %}Add Inventory Record - CORK Staff{% endblock %}

{% block page_title %}Add Inventory Record{% endblock %}

{% block content %}
<div class="fixed top-0 left-64 right-0 bottom-0 flex items-center justify-center bg-slate-200/50 z-50">
    <div class="w-11/12 max-w-6xl bg-white/98 backdrop-blur-sm py-8 px-8 rounded-3xl shadow-2xl border border-[#EFCFB4] relative overflow-hidden max-h-[90vh] overflow-y-auto">

            <!-- Top Accent Line -->
            <div class="absolute top-0 left-0 right-0 h-2 bg-gradient-to-r from-[#EFCFB4] via-[#9E2B47] to-[#7F1734] rounded-t-3xl"></div>

            <!-- Header -->
            <h1 class="text-4xl font-extrabold text-center text-[#7F1734] tracking-tight mb-8">
                ðŸ“¦ Add Inventory Record
            </h1>

            {{ form_start(form, {
                'attr': {'class': 'grid grid-cols-1 gap-6'}
            }) }}

                <!-- Product Field -->
                <div>
                    {{ form_label(form.product, 'Select Product', {
                        'label_attr': {'class': 'block text-sm font-semibold text-[#4B164C] mb-2 tracking-wide'}
                    }) }}
                    {{ form_widget(form.product, {
                        'attr': {
                            'class': 'w-full px-5 py-4 rounded-2xl bg-white border border-amber-200 shadow focus:ring-4 focus:ring-[#9E2B47]/40 focus:border-[#7F1734] text-gray-800 placeholder-gray-400 transition-all duration-300'
                        }
                    }) }}
                    {% if form_errors(form.product) %}
                        <p class="text-sm text-red-600 mt-1">{{ form_errors(form.product) }}</p>
                    {% endif %}
                </div>

                <!-- Quantity Field -->
                <div>
                    {{ form_label(form.quantity, 'Quantity', {
                        'label_attr': {'class': 'block text-sm font-semibold text-[#4B164C] mb-2 tracking-wide'}
                    }) }}
                    {{ form_widget(form.quantity, {
                        'attr': {
                            'class': 'w-full px-5 py-4 rounded-2xl bg-white border border-amber-200 shadow focus:ring-4 focus:ring-[#9E2B47]/40 focus:border-[#7F1734] text-gray-800 placeholder-gray-400 transition-all duration-300',
                            'type': 'number',
                            'min': '0',
                            'placeholder': '0'
                        }
                    }) }}
                    {% if form_errors(form.quantity) %}
                        <p class="text-sm text-red-600 mt-1">{{ form_errors(form.quantity) }}</p>
                    {% endif %}
                </div>

                <!-- Acquired Date Field -->
                <div>
                    {{ form_label(form.acquiredDate, 'Acquired Date', {
                        'label_attr': {'class': 'block text-sm font-semibold text-[#4B164C] mb-2 tracking-wide'}
                    }) }}
                    {{ form_widget(form.acquiredDate, {
                        'attr': {
                            'class': 'w-full px-5 py-4 rounded-2xl bg-white border border-amber-200 shadow focus:ring-4 focus:ring-[#9E2B47]/40 focus:border-[#7F1734] text-gray-800 placeholder-gray-400 transition-all duration-300'
                        }
                    }) }}
                    {% if form_errors(form.acquiredDate) %}
                        <p class="text-sm text-red-600 mt-1">{{ form_errors(form.acquiredDate) }}</p>
                    {% endif %}
                </div>

                <!-- Buttons Section -->
                <div class="mt-6 pt-6 border-t border-amber-100">
                    <div class="flex justify-center gap-4">
                        <button type="submit"
                                class="px-8 py-3 rounded-xl shadow-lg font-semibold text-base border transition-all duration-300 transform hover:scale-105 bg-[#7F1734] text-[#F8EAD8] border-[#EFCFB4] hover:bg-[#9E2B47] focus:ring-4 focus:ring-[#9E2B47]/40">
                            âœ“ Save Record
                        </button>
                        <a href="{{ path('staff_inventory_index') }}"
                           class="px-8 py-3 rounded-xl shadow-md font-semibold text-base border transition-all duration-300 transform hover:scale-105 bg-gray-200 text-gray-800 border-gray-300 hover:bg-gray-300 focus:ring-4 focus:ring-gray-400/40">
                            âœ• Cancel
                        </a>
                    </div>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
