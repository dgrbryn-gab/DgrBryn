{% extends 'staff/staff_base.html.twig' %}

{% block title %}My Inventory - CORK Staff{% endblock %}

{% block page_title %}My Inventory{% endblock %}

{% block content %}
<style>
    .inventory-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        border-left: 4px solid #7F1734;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }

    .inventory-card:hover {
        box-shadow: 0 4px 12px rgba(127, 23, 52, 0.15);
        transform: translateY(-2px);
    }

    .stat-badge {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 12px;
        text-transform: uppercase;
    }

    .stat-low {
        background: #FFF3CD;
        color: #856404;
    }

    .stat-normal {
        background: #D4EDDA;
        color: #155724;
    }

    .action-btn {
        padding: 8px 16px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .action-edit {
        background: #7F1734;
        color: white;
    }

    .action-edit:hover {
        background: #5E0B15;
    }

    .action-view {
        background: #EFCFB4;
        color: #7F1734;
    }

    .action-view:hover {
        background: #D4AF9A;
    }
</style>

<div style="margin-bottom: 30px;">
    <!-- Statistics Cards -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px;">
        <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); border-left: 4px solid #7F1734;">
            <p style="font-size: 12px; color: #888; text-transform: uppercase; font-weight: 600; margin-bottom: 8px;">Total Quantity</p>
            <h3 style="font-size: 28px; font-weight: 700; color: #7F1734; margin: 0;">{{ total_inventory }}</h3>
        </div>

        <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); border-left: 4px solid #FFA500;">
            <p style="font-size: 12px; color: #888; text-transform: uppercase; font-weight: 600; margin-bottom: 8px;">Low Stock Items</p>
            <h3 style="font-size: 28px; font-weight: 700; color: #FFA500; margin: 0;">{{ low_stock_items }}</h3>
        </div>

        <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); border-left: 4px solid #4CAF50;">
            <p style="font-size: 12px; color: #888; text-transform: uppercase; font-weight: 600; margin-bottom: 8px;">Total Products</p>
            <h3 style="font-size: 28px; font-weight: 700; color: #4CAF50; margin: 0;">{{ products|length }}</h3>
        </div>
    </div>

    <!-- Search and Filter -->
    <div style="background: white; padding: 20px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); margin-bottom: 30px;">
        <div style="display: flex; gap: 12px; flex-wrap: wrap; align-items: center; margin-bottom: 20px;">
            <form method="GET" style="display: flex; gap: 12px; flex: 1; min-width: 300px;">
                <input 
                    type="text" 
                    name="search" 
                    placeholder="Search products..."
                    value="{{ search_term }}"
                    style="flex: 1; padding: 10px 15px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;">
                
                <select name="sort" style="padding: 10px 15px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;">
                    <option value="lastUpdated" {% if sort_by == 'lastUpdated' %}selected{% endif %}>Recently Updated</option>
                    <option value="name" {% if sort_by == 'name' %}selected{% endif %}>Name (A-Z)</option>
                    <option value="quantity" {% if sort_by == 'quantity' %}selected{% endif %}>Quantity</option>
                </select>

                <button type="submit" style="padding: 10px 20px; background: #7F1734; color: white; border: none; border-radius: 6px; font-weight: 600; cursor: pointer;">
                    üîç Filter
                </button>
            </form>

            <a href="{{ path('staff_inventory_new') }}" style="padding: 10px 20px; background: #7F1734; color: white; text-decoration: none; border-radius: 6px; font-weight: 600; transition: all 0.3s ease;" onmouseover="this.style.background='#5E0B15'" onmouseout="this.style.background='#7F1734'">
                ‚ûï Add Inventory
            </a>
        </div>
    </div>

    <!-- Inventory List -->
    {% if products|length > 0 %}
        {% for product in products %}
            <div class="inventory-card">
                <div style="display: flex; justify-content: space-between; align-items: start; flex-wrap: wrap; gap: 20px;">
                    <div style="flex: 1; min-width: 250px;">
                        <h3 style="font-size: 18px; font-weight: 700; color: #333; margin: 0 0 8px 0;">
                            üì¶ {{ product.name }}
                            {% if product.id not in own_product_ids %}
                                <span style="font-size: 12px; color: #FFA500; font-weight: 600; margin-left: 8px;">üìå Admin</span>
                            {% endif %}
                        </h3>
                        <p style="font-size: 13px; color: #666; margin: 0 0 12px 0;">
                            Price: <strong>‚Ç±{{ product.price|number_format(2) }}</strong>
                        </p>

                        {% if product.wineInventories|length > 0 %}
                            <div style="margin-top: 12px;">
                                {% for inventory in product.wineInventories %}
                                    <div style="padding: 10px; background: #f8f9fa; border-radius: 6px; margin-bottom: 8px; font-size: 13px;">
                                        <div style="display: flex; justify-content: space-between; align-items: center;">
                                            <div style="flex: 1;">
                                                <strong>Quantity:</strong> {{ inventory.quantity }} units
                                                {% if inventory.quantity < 10 %}
                                                    <span class="stat-badge stat-low">‚ö†Ô∏è Low Stock</span>
                                                {% else %}
                                                    <span class="stat-badge stat-normal">‚úì In Stock</span>
                                                {% endif %}
                                            </div>
                                            <div style="display: flex; gap: 6px; white-space: nowrap;">
                                                <a href="{{ path('staff_inventory_show', {'id': inventory.id}) }}" class="action-btn action-view" title="View Inventory #{{ inventory.id }}">
                                                    üëÅÔ∏è View
                                                </a>
                                                {% if product.id in own_product_ids %}
                                                    <a href="{{ path('staff_inventory_edit', {'id': inventory.id}) }}" class="action-btn action-edit" title="Edit Inventory #{{ inventory.id }}">
                                                        ‚úèÔ∏è Edit
                                                    </a>
                                                {% else %}
                                                    <span style="display: inline-block; padding: 6px 10px; background: #f0f0f0; border-radius: 4px; font-size: 11px; color: #999; cursor: not-allowed;">
                                                        üîí Read Only
                                                    </span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div style="text-align: right; font-size: 12px; color: #888; margin-top: 6px;">
                                            Updated: {{ inventory.lastUpdated|date('M d, Y') }}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p style="font-size: 13px; color: #999; font-style: italic;">No inventory records yet</p>
                        {% endif %}
                    </div>

                    <div style="display: flex; gap: 8px; flex-direction: column; white-space: nowrap;">
                        <a href="{{ path('staff_inventory_new') }}?product={{ product.id }}" class="action-btn action-edit">
                            ‚ûï Add Inventory
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div style="background: white; padding: 40px; border-radius: 12px; text-align: center; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
            <p style="font-size: 16px; color: #666; margin-bottom: 20px;">
                üì¶ No inventory records found
            </p>
            <a href="{{ path('staff_inventory_new') }}" style="padding: 12px 24px; background: #7F1734; color: white; text-decoration: none; border-radius: 6px; font-weight: 600; display: inline-block;">
                Create Your First Inventory Record
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
