{% extends 'staff/staff_base.html.twig' %}

{% block title %}Edit Profile - Staff Dashboard - CORK{% endblock %}

{% block page_title %}Edit Profile{% endblock %}

{% block content %}
<div class="profile-backdrop">
    <div class="profile-modal">
    <!-- Info Alert -->
    <div class="alert-info">
        <span class="alert-info-icon">‚ÑπÔ∏è</span>
        <div>
            <strong>Note:</strong> Your username and email are set by the administrator and cannot be changed. You can only update your password below.
        </div>
    </div>

    <!-- Error Alert -->
    {% if error %}
        <div class="alert-error">
            <span class="alert-error-icon">‚úó</span>
            {{ error }}
        </div>
    {% endif %}

    <!-- Edit Form Card -->
    <div class="edit-form-container">
        <!-- Account Information (Read-only) -->
        <fieldset class="form-fieldset">
            <legend class="form-legend">
                Account Information
            </legend>
            
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                <!-- Username -->
                <div>
                    <label class="form-field-label">
                        Username
                    </label>
                    <div class="form-field-display">
                        @{{ user.username }}
                    </div>
                </div>

                <!-- Email -->
                <div>
                    <label class="form-field-label">
                        Email Address
                    </label>
                    <div class="form-field-display">
                        {{ user.email }}
                    </div>
                </div>
            </div>
        </fieldset>

        <!-- Password Change Form -->
        <form method="POST" action="{{ path('staff_profile_edit') }}">
            <fieldset class="form-fieldset-border">
                <legend class="form-legend-bordered">
                    Change Password
                </legend>
                
                <p class="form-help-text">
                    Leave these fields empty if you don't want to change your password.
                </p>

                <div class="profile-form-row-three">
                    <!-- Current Password -->
                    <div>
                        <label for="current_password" class="form-field-label">
                            Current Password
                        </label>
                        <input 
                            type="password"
                            id="current_password"
                            name="current_password"
                            class="form-field-input"
                        />
                    </div>

                    <!-- New Password -->
                    <div>
                        <label for="new_password" class="form-field-label">
                            New Password
                        </label>
                        <input 
                            type="password"
                            id="new_password"
                            name="new_password"
                            class="form-field-input"
                        />
                        <p class="form-small-text">
                            Must be at least 6 characters long
                        </p>
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label for="confirm_password" class="form-field-label">
                            Confirm New Password
                        </label>
                        <input 
                            type="password"
                            id="confirm_password"
                            name="confirm_password"
                            class="form-field-input"
                        />
                    </div>
                </div>
            </fieldset>

            <!-- Action Buttons -->
            <div class="profile-actions">
                <button 
                    type="submit"
                    class="btn-burgundy"
                >
                    üíæ Update Password
                </button>
                <a href="{{ path('staff_profile_index') }}" class="btn-secondary">
                    ‚Üê Back to Profile
                </a>
            </div>
        </form>
    </div>
    </div>
</div>
{% endblock %}
