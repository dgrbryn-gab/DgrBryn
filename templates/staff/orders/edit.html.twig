{% extends 'staff/staff_base.html.twig' %}

{% block title %}Edit Order {{ order.orderNumber }} - CORK Staff{% endblock %}

{% block page_title %}Edit Order{% endblock %}

{% block content %}
<div class="order-edit-container">
    <!-- Header -->
    <div class="order-edit-header">
        <div>
            <h1 class="order-edit-title">üìã Edit Order {{ order.orderNumber }}</h1>
            <p class="order-edit-subtitle">Update order details and items.</p>
        </div>
        <div class="order-edit-actions-top">
            <a href="{{ path('staff_orders_show', {'id': order.id}) }}" class="btn-view-order">
                üëÅÔ∏è View Order
            </a>
            <a href="{{ path('staff_orders_index') }}" class="btn-back">
                ‚Üê Back
            </a>
        </div>
    </div>

    <!-- Form Errors -->
    {% if form.vars.errors|length > 0 %}
        <div class="form-errors">
            <p class="form-errors-title">Form Errors:</p>
            {% for error in form.vars.errors %}
                <p class="form-error-item">- {{ error.message }}</p>
            {% endfor %}
        </div>
    {% endif %}

    <!-- Order Details Form -->
    <div class="order-form-card">
        {{ form_start(form, {'attr': {'class': 'order-form', 'novalidate': 'novalidate'}}) }}

        <!-- Customer Information Section -->
        <fieldset class="order-fieldset">
            <legend class="order-legend">Customer Information</legend>
            
            <div class="form-grid form-grid-2">
                <div class="form-group">
                    <label class="form-label">Customer Name</label>
                    {{ form_widget(form.customerName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label class="form-label">Email</label>
                    {{ form_widget(form.customerEmail, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group form-group-full">
                    <label class="form-label">Phone</label>
                    {{ form_widget(form.customerPhone, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </fieldset>

        <!-- Shipping & Billing Section -->
        <fieldset class="order-fieldset">
            <legend class="order-legend">Addresses</legend>
            
            <div class="form-grid form-grid-2">
                <div class="form-group">
                    <label class="form-label">Shipping Address</label>
                    {{ form_widget(form.shippingAddress, {'attr': {'class': 'form-control form-textarea', 'rows': 4}}) }}
                </div>
                <div class="form-group">
                    <label class="form-label">Billing Address</label>
                    {{ form_widget(form.billingAddress, {'attr': {'class': 'form-control form-textarea', 'rows': 4}}) }}
                </div>
            </div>
        </fieldset>

        <!-- Order Status Section -->
        <fieldset class="order-fieldset">
            <legend class="order-legend">Order Status</legend>
            
            <div class="form-grid form-grid-2">
                <div class="form-group">
                    <label class="form-label">Order Status</label>
                    {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label class="form-label">Payment Status</label>
                    {{ form_widget(form.paymentStatus, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </fieldset>

        <!-- Payment Section -->
        <fieldset class="order-fieldset">
            <legend class="order-legend">Payment Information</legend>
            
            <div class="form-grid form-grid-2">
                <div class="form-group">
                    <label class="form-label">Payment Method</label>
                    {{ form_widget(form.paymentMethod, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </fieldset>

        <!-- Order Costs Section -->
        <fieldset class="order-fieldset">
            <legend class="order-legend">Order Costs</legend>
            
            <div class="form-grid form-grid-3">
                <div class="form-group">
                    <label class="form-label">Shipping Cost (‚Ç±)</label>
                    {{ form_widget(form.shippingCost, {'attr': {'class': 'form-control', 'type': 'number', 'step': '0.01'}}) }}
                </div>
                <div class="form-group">
                    <label class="form-label">Tax Amount (‚Ç±)</label>
                    {{ form_widget(form.taxAmount, {'attr': {'class': 'form-control', 'type': 'number', 'step': '0.01'}}) }}
                </div>
                <div class="form-group">
                    <label class="form-label">Discount (‚Ç±)</label>
                    {{ form_widget(form.discountAmount, {'attr': {'class': 'form-control', 'type': 'number', 'step': '0.01'}}) }}
                </div>
            </div>
        </fieldset>

        <!-- Notes Section -->
        <fieldset class="order-fieldset">
            <legend class="order-legend">Additional Notes</legend>
            
            <div class="form-group">
                <label class="form-label">Order Notes</label>
                {{ form_widget(form.notes, {'attr': {'class': 'form-control form-textarea', 'rows': 4}}) }}
            </div>
        </fieldset>

        <!-- Order Items Section -->
        {% if form.orderItems is defined and form.orderItems|length > 0 %}
        <fieldset class="order-fieldset">
            <legend class="order-legend">Order Items</legend>
            
            {% for item in form.orderItems %}
            <div class="order-item-card">
                <div class="order-item-header">
                    <span class="order-item-number">Item #{{ loop.index }}</span>
                </div>
                <div class="form-grid form-grid-4">
                    <div class="form-group">
                        <label class="form-label">Product</label>
                        {{ form_widget(item.product, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label class="form-label">Quantity</label>
                        {{ form_widget(item.quantity, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label class="form-label">Unit Price</label>
                        {{ form_widget(item.unitPrice, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <label class="form-label">Discount</label>
                        {{ form_widget(item.discount, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            {% endfor %}
        </fieldset>
        {% endif %}

        <!-- Form Actions -->
        <div class="form-actions">
            <button type="submit" class="btn-submit">
                ‚úì Update Order
            </button>
            <a href="{{ path('staff_orders_show', {'id': order.id}) }}" class="btn-cancel">
                ‚úï Cancel
            </a>
        </div>

        {{ form_end(form) }}
    </div>

    <!-- Delete Option -->
    <div class="delete-section">
        <p class="delete-warning">‚ö†Ô∏è Danger Zone</p>
        <form method="POST" action="{{ path('staff_orders_delete', {'id': order.id}) }}" onsubmit="return confirm('Are you sure you want to delete this order? This action cannot be undone.');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
            <button type="submit" class="btn-delete">
                üóëÔ∏è Delete Order
            </button>
        </form>
    </div>
</div>
{% endblock %}
