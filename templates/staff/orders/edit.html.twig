{% extends 'staff/staff_base.html.twig' %}

{% block title %}Edit Order - CORK Staff{% endblock %}

{% block page_title %}Edit Order{% endblock %}

{% block content %}
<div style="max-width: 900px; margin: 0 auto;">
    <div style="background: white; padding: 30px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); border-left: 4px solid #7F1734;">
        
        <h2 style="font-size: 20px; font-weight: 700; color: #7F1734; margin-bottom: 20px;">
            üìù Edit Order: {{ order.orderNumber }}
        </h2>

        <!-- Form Errors -->
        {% if form.vars.errors|length > 0 %}
            <div style="margin-bottom: 20px; padding: 15px; background: #f8d7da; border: 1px solid #f5c6cb; border-radius: 6px; color: #721c24;">
                <p style="font-weight: 600; margin: 0 0 10px 0;">Form Errors:</p>
                {% for error in form.vars.errors %}
                    <p style="margin: 5px 0;">- {{ error.message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <!-- CSRF Token -->
        {{ form_widget(form._token) }}

        <!-- Customer Information Section -->
        <fieldset style="border: 1px solid #e0e0e0; border-radius: 8px; padding: 20px; margin-bottom: 25px;">
            <legend style="padding: 0 10px; font-weight: 700; color: #7F1734; font-size: 14px; text-transform: uppercase;">üìã Customer Information</legend>

            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;">
                <div>
                    {{ form_label(form.customerName, 'Customer Name', {'label_attr': {'style': 'display: block; font-weight: 600; margin-bottom: 8px; color: #333;'}}) }}
                    {{ form_widget(form.customerName, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;'}}) }}
                </div>

                <div>
                    {{ form_label(form.customerEmail, 'Email', {'label_attr': {'style': 'display: block; font-weight: 600; margin-bottom: 8px; color: #333;'}}) }}
                    {{ form_widget(form.customerEmail, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;'}}) }}
                </div>

                <div>
                    {{ form_label(form.customerPhone, 'Phone', {'label_attr': {'style': 'display: block; font-weight: 600; margin-bottom: 8px; color: #333;'}}) }}
                    {{ form_widget(form.customerPhone, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;'}}) }}
                </div>
            </div>
        </fieldset>

        <!-- Shipping & Billing Information -->
        <fieldset style="border: 1px solid #e0e0e0; border-radius: 8px; padding: 20px; margin-bottom: 25px;">
            <legend style="padding: 0 10px; font-weight: 700; color: #7F1734; font-size: 14px; text-transform: uppercase;">üè† Address Information</legend>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                <div>
                    {{ form_label(form.shippingAddress, 'Shipping Address', {'label_attr': {'style': 'display: block; font-weight: 600; margin-bottom: 8px; color: #333;'}}) }}
                    {{ form_widget(form.shippingAddress, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px; min-height: 80px;'}}) }}
                </div>

                <div>
                    {{ form_label(form.billingAddress, 'Billing Address', {'label_attr': {'style': 'display: block; font-weight: 600; margin-bottom: 8px; color: #333;'}}) }}
                    {{ form_widget(form.billingAddress, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px; min-height: 80px;'}}) }}
                </div>
            </div>
        </fieldset>

        <!-- Order Items -->
        <fieldset style="border: 1px solid #e0e0e0; border-radius: 8px; padding: 20px; margin-bottom: 25px;">
            <legend style="padding: 0 10px; font-weight: 700; color: #7F1734; font-size: 14px; text-transform: uppercase;">üì¶ Order Items</legend>
            
            <div id="order-items" style="display: grid; gap: 20px;">
                {% for itemForm in form.orderItems %}
                    <div style="padding: 15px; background: #f8f9fa; border-radius: 8px; border: 1px solid #e0e0e0;">
                        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 15px;">
                            {{ form_widget(itemForm, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </fieldset>

        <!-- Order Costs -->
        <fieldset style="border: 1px solid #e0e0e0; border-radius: 8px; padding: 20px; margin-bottom: 25px;">
            <legend style="padding: 0 10px; font-weight: 700; color: #7F1734; font-size: 14px; text-transform: uppercase;">üí∞ Order Costs</legend>

            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
                <div>
                    {{ form_label(form.shippingCost, 'Shipping Cost (‚Ç±)', {'label_attr': {'style': 'display: block; font-weight: 600; margin-bottom: 8px; color: #333;'}}) }}
                    {{ form_widget(form.shippingCost, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;', 'type': 'number', 'step': '0.01'}}) }}
                </div>

                <div>
                    {{ form_label(form.taxAmount, 'Tax Amount (‚Ç±)', {'label_attr': {'style': 'display: block; font-weight: 600; margin-bottom: 8px; color: #333;'}}) }}
                    {{ form_widget(form.taxAmount, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;', 'type': 'number', 'step': '0.01'}}) }}
                </div>

                <div>
                    {{ form_label(form.discountAmount, 'Discount (‚Ç±)', {'label_attr': {'style': 'display: block; font-weight: 600; margin-bottom: 8px; color: #333;'}}) }}
                    {{ form_widget(form.discountAmount, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;', 'type': 'number', 'step': '0.01'}}) }}
                </div>
            </div>
        </fieldset>

        <!-- Action Buttons -->
        <div style="display: flex; gap: 12px; margin-top: 30px; flex-wrap: wrap;">
            <button type="submit" style="flex: 1; min-width: 150px; padding: 12px; background: #7F1734; color: white; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; font-size: 14px; transition: all 0.3s ease;" onmouseover="this.style.background='#5E0B15'" onmouseout="this.style.background='#7F1734'">
                ‚úì Update Order
            </button>
            <a href="{{ path('staff_orders_show', {'id': order.id}) }}" style="flex: 1; min-width: 150px; padding: 12px; background: #EFCFB4; color: #7F1734; text-decoration: none; border-radius: 6px; font-weight: 600; text-align: center; font-size: 14px; transition: all 0.3s ease;" onmouseover="this.style.background='#D4AF9A'" onmouseout="this.style.background='#EFCFB4'">
                ‚úï Cancel
            </a>
        </div>

        {{ form_end(form) }}

        <!-- Delete Option -->
        <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid #e0e0e0;">
            <form method="POST" action="{{ path('staff_orders_delete', {'id': order.id}) }}" onsubmit="return confirm('Are you sure you want to delete this order?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                <button type="submit" style="padding: 10px 20px; background: #dc3545; color: white; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; font-size: 14px;">
                    üóëÔ∏è Delete Order
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
