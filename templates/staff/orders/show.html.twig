{% extends 'staff/staff_base.html.twig' %}

{% block title %}Order Details - CORK Staff{% endblock %}

{% block page_title %}Order Details{% endblock %}

{% block content %}
<div style="max-width: 900px; margin: 0 auto;">
    <div style="background: white; padding: 30px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08); border-left: 4px solid #7F1734;">
        
        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 30px; flex-wrap: wrap; gap: 20px;">
            <div>
                <h2 style="font-size: 24px; font-weight: 700; color: #7F1734; margin: 0 0 10px 0;">
                    üõí {{ order.orderNumber }}
                </h2>
                <p style="color: #666; margin: 0; font-size: 14px;">
                    Created: {{ order.createdAt|date('M d, Y H:i') }}
                </p>
            </div>
            
            <!-- Status Badge -->
            <div>
                {% set status_colors = {
                    'pending': {'bg': '#FFF3CD', 'color': '#856404'},
                    'processing': {'bg': '#D1ECF1', 'color': '#0c5460'},
                    'shipped': {'bg': '#D4EDDA', 'color': '#155724'},
                    'delivered': {'bg': '#C3E6CB', 'color': '#0B5345'},
                    'cancelled': {'bg': '#F8D7DA', 'color': '#721C24'}
                } %}
                {% set colors = status_colors[order.status] %}
                <span style="display: inline-block; padding: 12px 20px; background: {{ colors.bg }}; color: {{ colors.color }}; border-radius: 20px; font-weight: 700; text-transform: uppercase; font-size: 12px;">
                    {{ order.status }}
                </span>
            </div>
        </div>

        <!-- Customer Information -->
        <div style="padding: 20px; background: #f8f9fa; border-radius: 8px; margin-bottom: 25px;">
            <h3 style="font-size: 14px; font-weight: 700; color: #333; text-transform: uppercase; margin-bottom: 12px;">üìã Customer Information</h3>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; font-size: 14px;">
                <div>
                    <strong>Name:</strong><br>
                    {{ order.customerName ?? 'N/A' }}
                </div>
                <div>
                    <strong>Email:</strong><br>
                    {{ order.customerEmail ?? 'N/A' }}
                </div>
                <div>
                    <strong>Phone:</strong><br>
                    {{ order.customerPhone ?? 'N/A' }}
                </div>
            </div>
        </div>

        <!-- Addresses -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; margin-bottom: 25px;">
            {% if order.shippingAddress %}
                <div style="padding: 20px; background: #f8f9fa; border-radius: 8px;">
                    <h3 style="font-size: 14px; font-weight: 700; color: #333; text-transform: uppercase; margin-bottom: 12px;">üì¶ Shipping Address</h3>
                    <p style="color: #666; white-space: pre-wrap; margin: 0; font-size: 13px; line-height: 1.6;">
                        {{ order.shippingAddress }}
                    </p>
                </div>
            {% endif %}

            {% if order.billingAddress %}
                <div style="padding: 20px; background: #f8f9fa; border-radius: 8px;">
                    <h3 style="font-size: 14px; font-weight: 700; color: #333; text-transform: uppercase; margin-bottom: 12px;">üí≥ Billing Address</h3>
                    <p style="color: #666; white-space: pre-wrap; margin: 0; font-size: 13px; line-height: 1.6;">
                        {{ order.billingAddress }}
                    </p>
                </div>
            {% endif %}
        </div>

        <!-- Order Items -->
        <div style="margin-bottom: 25px;">
            <h3 style="font-size: 14px; font-weight: 700; color: #333; text-transform: uppercase; margin-bottom: 12px;">üìã Order Items</h3>
            
            {% if order.orderItems|length > 0 %}
                <table style="width: 100%; border-collapse: collapse; font-size: 13px;">
                    <thead>
                        <tr style="background: #f8f9fa; border-bottom: 2px solid #ddd;">
                            <th style="padding: 12px; text-align: left; font-weight: 700;">Product</th>
                            <th style="padding: 12px; text-align: center; font-weight: 700;">Qty</th>
                            <th style="padding: 12px; text-align: right; font-weight: 700;">Unit Price</th>
                            <th style="padding: 12px; text-align: right; font-weight: 700;">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in order.orderItems %}
                            <tr style="border-bottom: 1px solid #eee;">
                                <td style="padding: 12px;">{{ item.product.name ?? 'Unknown Product' }}</td>
                                <td style="padding: 12px; text-align: center;">{{ item.quantity }}</td>
                                <td style="padding: 12px; text-align: right;">‚Ç±{{ item.unitPrice|number_format(2) }}</td>
                                <td style="padding: 12px; text-align: right; font-weight: 600;">‚Ç±{{ item.subtotal|number_format(2) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p style="color: #999; font-style: italic;">No items in this order</p>
            {% endif %}
        </div>

        <!-- Order Totals -->
        <div style="padding: 20px; background: #f8f9fa; border-radius: 8px; margin-bottom: 25px;">
            <h3 style="font-size: 14px; font-weight: 700; color: #333; text-transform: uppercase; margin-bottom: 15px;">üí∞ Order Summary</h3>
            
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 15px; font-size: 13px;">
                <div>
                    <strong>Subtotal:</strong><br>
                    {% set subtotal = 0 %}
                    {% for item in order.orderItems %}
                        {% set subtotal = subtotal + item.subtotal %}
                    {% endfor %}
                    ‚Ç±{{ subtotal|number_format(2) }}
                </div>
                <div>
                    <strong>Shipping:</strong><br>
                    ‚Ç±{{ (order.shippingCost ?? 0)|number_format(2) }}
                </div>
                <div>
                    <strong>Tax:</strong><br>
                    ‚Ç±{{ (order.taxAmount ?? 0)|number_format(2) }}
                </div>
                <div>
                    <strong>Discount:</strong><br>
                    -‚Ç±{{ (order.discountAmount ?? 0)|number_format(2) }}
                </div>
                <div style="background: white; padding: 10px; border-radius: 6px; border: 2px solid #7F1734;">
                    <strong>Total Amount:</strong><br>
                    <span style="font-size: 18px; font-weight: 700; color: #7F1734;">
                        ‚Ç±{{ (order.totalAmount ?? 0)|number_format(2) }}
                    </span>
                </div>
            </div>
        </div>

        <!-- Status Update -->
        {% if order.status != 'delivered' and order.status != 'cancelled' %}
            <div style="padding: 20px; background: #e3f2fd; border-radius: 8px; margin-bottom: 25px; border-left: 4px solid #2196F3;">
                <h3 style="font-size: 14px; font-weight: 700; color: #1976D2; margin-bottom: 12px;">‚öôÔ∏è Update Status</h3>
                
                <form method="POST" action="{{ path('staff_orders_update_status', {'id': order.id}) }}" style="display: flex; gap: 10px; flex-wrap: wrap;">
                    <select name="status" style="padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 13px;">
                        <option value="pending" {% if order.status == 'pending' %}selected{% endif %}>Pending</option>
                        <option value="processing" {% if order.status == 'processing' %}selected{% endif %}>Processing</option>
                        <option value="shipped" {% if order.status == 'shipped' %}selected{% endif %}>Shipped</option>
                        <option value="delivered" {% if order.status == 'delivered' %}selected{% endif %}>Delivered</option>
                        <option value="cancelled">Cancel Order</option>
                    </select>
                    <button type="submit" style="padding: 10px 20px; background: #2196F3; color: white; border: none; border-radius: 6px; font-weight: 600; cursor: pointer; font-size: 13px;">
                        Update Status
                    </button>
                </form>
            </div>
        {% endif %}

        <!-- Action Buttons -->
        <div style="display: flex; gap: 12px; flex-wrap: wrap;">
            <a href="{{ path('staff_orders_edit', {'id': order.id}) }}" style="padding: 12px 24px; background: #7F1734; color: white; text-decoration: none; border-radius: 6px; font-weight: 600; transition: all 0.3s ease;" onmouseover="this.style.background='#5E0B15'" onmouseout="this.style.background='#7F1734'">
                ‚úèÔ∏è Edit
            </a>
            <a href="{{ path('staff_orders_index') }}" style="padding: 12px 24px; background: #EFCFB4; color: #7F1734; text-decoration: none; border-radius: 6px; font-weight: 600; transition: all 0.3s ease;" onmouseover="this.style.background='#D4AF9A'" onmouseout="this.style.background='#EFCFB4'">
                ‚Üê Back to Orders
            </a>
        </div>
    </div>
</div>
{% endblock %}
